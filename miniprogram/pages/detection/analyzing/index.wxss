/* Detection Analyzing Page Styles */
/* 设计语言：静谧医疗感 · 青蓝色点缀 · 雾面质感 */

.analyzing-page {
  min-height: 100vh;
  background: #F4F5F7;
  display: flex;
  flex-direction: column;
  padding-top: 88rpx;
}

/* Loading section */
.loading-section {
  padding: 40rpx 32rpx;
}

/* Stages section */
.stages-section {
  flex: 1;
  margin: 0 32rpx;
  padding: 40rpx;
  background: #FFFFFF;
  border-radius: 24rpx;
  border: 1rpx solid #EBEBED;
}

.stages-title {
  margin-bottom: 40rpx;
}

.stages-title text {
  font-size: 32rpx;
  font-weight: 600;
  color: #2C2E33;
}

.stages-list {
  display: flex;
  flex-direction: column;
}

.stage-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 0;
}

/* Stage icon */
.stage-icon-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 24rpx;
}

.stage-icon {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  transition: all 0.3s ease;
}

.stage-icon.pending {
  background: #F4F5F7;
  color: #7A7D85;
}

.stage-icon.active {
  background: #2E8B8B;
  color: #FFFFFF;
  animation: pulse-glow 1.5s ease-in-out infinite;
}

.stage-icon.completed {
  background: #3CB371;
  color: #FFFFFF;
}

@keyframes pulse-glow {
  0%, 100% {
    box-shadow: 0 0 0 0 rgba(46, 139, 139, 0.4);
  }
  50% {
    box-shadow: 0 0 0 12rpx rgba(46, 139, 139, 0);
  }
}

/* Connecting line */
.stage-line {
  width: 4rpx;
  height: 48rpx;
  background: #EBEBED;
  margin: 8rpx 0;
}

.stage-item.completed .stage-line {
  background: #3CB371;
}

.stage-item.active .stage-line {
  background: linear-gradient(180deg, #2E8B8B 0%, #EBEBED 100%);
}

/* Stage info */
.stage-info {
  flex: 1;
  padding-top: 8rpx;
  padding-bottom: 40rpx;
}

.stage-label {
  display: block;
  font-size: 28rpx;
  color: #2C2E33;
  font-weight: 500;
}

.stage-status {
  display: block;
  font-size: 24rpx;
  margin-top: 4rpx;
}

.stage-item.pending .stage-label {
  color: #7A7D85;
}

.stage-item.active .stage-status {
  color: #2E8B8B;
}

.stage-item.completed .stage-status {
  color: #3CB371;
}

/* Cancel section */
.cancel-section {
  padding: 24rpx 32rpx;
}

.cancel-btn {
  width: 100%;
  height: 80rpx;
  background: transparent;
  border: 2rpx solid #EBEBED;
  border-radius: 999rpx;
  font-size: 28rpx;
  color: #7A7D85;
  display: flex;
  align-items: center;
  justify-content: center;
}

.cancel-btn::after {
  border: none;
}

/* Disclaimer */
.disclaimer {
  text-align: center;
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
}

.disclaimer text {
  font-size: 22rpx;
  color: #7A7D85;
}

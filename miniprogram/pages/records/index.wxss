/* Records Page Styles - Health Records */

.page-container {
  min-height: 100vh;
  background-color: var(--color-bg-page);
  display: flex;
  flex-direction: column;
}

/* Filter Section */
.filter-section {
  background-color: var(--color-bg-card);
  padding: var(--spacing-sm) var(--spacing-md);
  border-bottom: 1rpx solid var(--color-border);
  position: sticky;
  top: 0;
  z-index: 10;
}

.filter-scroll {
  white-space: nowrap;
  display: flex;
}

.filter-tab {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  padding: var(--spacing-sm) var(--spacing-lg);
  margin-right: var(--spacing-sm);
  position: relative;
}

.filter-label {
  font-size: var(--font-size-body);
  color: var(--color-text-secondary);
  transition: color 0.2s ease;
}

.filter-tab.active .filter-label {
  color: var(--color-primary);
  font-weight: 600;
}

.filter-indicator {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 48rpx;
  height: 4rpx;
  background-color: var(--color-primary);
  border-radius: 2rpx;
}

/* Records Section */
.records-section {
  flex: 1;
  padding: var(--spacing-md);
}

.records-summary {
  margin-bottom: var(--spacing-md);
}

.summary-text {
  font-size: var(--font-size-caption);
  color: var(--color-text-hint);
}

/* Record Item */
.record-item {
  margin-bottom: var(--spacing-md);
}

.record-date {
  display: flex;
  align-items: center;
  margin-bottom: var(--spacing-xs);
}

.date-text {
  margin-left: var(--spacing-xs);
  font-size: var(--font-size-caption);
  color: var(--color-text-hint);
}

/* Loading More */
.loading-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: var(--spacing-lg);
}

.loading-spinner {
  width: 32rpx;
  height: 32rpx;
  border: 4rpx solid var(--color-border);
  border-top-color: var(--color-primary);
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
  margin-right: var(--spacing-sm);
}

.loading-spinner.large {
  width: 64rpx;
  height: 64rpx;
  border-width: 6rpx;
  margin-right: 0;
  margin-bottom: var(--spacing-md);
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  font-size: var(--font-size-caption);
  color: var(--color-text-hint);
}

/* No More */
.no-more {
  text-align: center;
  padding: var(--spacing-lg);
}

.no-more-text {
  font-size: var(--font-size-caption);
  color: var(--color-text-hint);
}

/* Empty State */
.empty-state {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: var(--spacing-xl);
  text-align: center;
}

.empty-icon-wrapper {
  margin-bottom: var(--spacing-lg);
}

.empty-title {
  display: block;
  font-size: var(--font-size-h2);
  font-weight: 600;
  color: var(--color-text-primary);
  margin-bottom: var(--spacing-sm);
}

.empty-hint {
  display: block;
  font-size: var(--font-size-body);
  color: var(--color-text-hint);
  margin-bottom: var(--spacing-xl);
}

.empty-btn {
  min-width: 280rpx;
}

/* Initial Loading */
.initial-loading {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: var(--spacing-xl);
}

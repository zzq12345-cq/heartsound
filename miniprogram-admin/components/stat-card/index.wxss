/**
 * Stat Card Component Styles
 * 统计卡片组件样式 - Soft UI 现代风格
 */

.stat-card {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 28rpx;
  position: relative;
  overflow: hidden;
  /* Soft UI 阴影 - 更柔和的层次感 */
  box-shadow:
    0 4rpx 16rpx rgba(149, 157, 165, 0.08),
    0 12rpx 32rpx rgba(149, 157, 165, 0.06);
  transition: all 0.25s ease;
}

.stat-card:active {
  transform: translateY(2rpx);
  box-shadow:
    0 2rpx 8rpx rgba(149, 157, 165, 0.08),
    0 6rpx 16rpx rgba(149, 157, 165, 0.06);
}

/* 主题装饰 - 顶部渐变条替代左侧色条 */
.stat-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  border-radius: 24rpx 24rpx 0 0;
}

.theme-primary::before {
  background: linear-gradient(90deg, #667EEA 0%, #64B5F6 100%);
}

.theme-success::before {
  background: linear-gradient(90deg, #5CB85C 0%, #7ED987 100%);
}

.theme-warning::before {
  background: linear-gradient(90deg, #F5A623 0%, #FACC5D 100%);
}

.theme-danger::before {
  background: linear-gradient(90deg, #E25C5C 0%, #F08080 100%);
}

/* 移除旧的左侧边框 */
.theme-primary,
.theme-success,
.theme-warning,
.theme-danger {
  border-left: none;
}

/* 加载状态 */
.stat-loading {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx 0;
  gap: 16rpx;
}

.loading-dot {
  width: 12rpx;
  height: 12rpx;
  background: linear-gradient(135deg, #667EEA 0%, #64B5F6 100%);
  border-radius: 50%;
  animation: loadingPulse 1.2s infinite ease-in-out;
}

.loading-dot:nth-child(2) {
  animation-delay: 0.2s;
}

.loading-dot:nth-child(3) {
  animation-delay: 0.4s;
}

@keyframes loadingPulse {
  0%, 80%, 100% {
    transform: scale(0.6);
    opacity: 0.4;
  }
  40% {
    transform: scale(1);
    opacity: 1;
  }
}

/* 内容区域 */
.stat-content {
  display: flex;
  flex-direction: column;
}

/* 头部 - 标题和图标 */
.stat-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.stat-title {
  font-size: 26rpx;
  color: #7F8C9A;
  font-weight: 500;
  letter-spacing: 0.5rpx;
}


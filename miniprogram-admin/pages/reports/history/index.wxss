/* Report History Page Styles */

.page {
  min-height: 100vh;
  background: #f5f5f5;
}

/* Filter bar */
.filter-bar {
  display: flex;
  background: #fff;
  padding: 16rpx 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
  gap: 24rpx;
  position: sticky;
  top: 0;
  z-index: 10;
}

.filter-item {
  padding: 12rpx 24rpx;
  font-size: 28rpx;
  color: #666;
  border-radius: 24rpx;
  transition: all 0.2s;
}

.filter-item.active {
  background: #1890FF;
  color: #fff;
}

/* Stats bar */
.stats-bar {
  padding: 16rpx 24rpx;
  background: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}

.stats-text {
  font-size: 26rpx;
  color: #999;
}

/* Report list */
.report-list {
  padding: 16rpx 24rpx;
}

.report-card {
  display: flex;
  align-items: flex-start;
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  transition: all 0.2s;
}

.report-card.expired {
  opacity: 0.7;
}

.report-card.failed {
  border-left: 6rpx solid #F44336;
}

.report-card.processing,
.report-card.pending {
  border-left: 6rpx solid #FF9800;
}

.report-card.completed {
  border-left: 6rpx solid #4CAF50;
}

/* Card icon */
.card-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 20rpx;
  margin-top: 4rpx;
}

.card-icon image {
  width: 100%;
  height: 100%;
}

/* Card info */
.card-info {
  flex: 1;
  min-width: 0;
}

.card-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 8rpx;
}

.report-type {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.report-status {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 16rpx;
}

.status-completed {
  background: rgba(76, 175, 80, 0.1);
  color: #4CAF50;
}

.status-processing,
.status-pending {
  background: rgba(255, 152, 0, 0.1);
  color: #FF9800;
}

.status-failed {
  background: rgba(244, 67, 54, 0.1);
  color: #F44336;
}

.card-meta {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.card-params {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 8rpx;
}

.param-label {
  font-size: 24rpx;
  color: #666;
}

.param-format {
  font-size: 20rpx;
  color: #1890FF;
  padding: 2rpx 8rpx;
  background: rgba(24, 144, 255, 0.1);
  border-radius: 8rpx;
  text-transform: uppercase;
}

.card-expire {
  margin-top: 4rpx;
}

.expire-text {
  font-size: 22rpx;
  color: #999;
}

.expire-text.expired {
  color: #F44336;
}

/* Card actions */
.card-actions {
  display: flex;
  align-items: center;
  margin-left: 16rpx;
}

.action-btn {
  padding: 16rpx 28rpx;
  border-radius: 24rpx;
  font-size: 26rpx;
  font-weight: 500;
}

.action-btn.download {
  background: #1890FF;
  color: #fff;
}

.action-btn.retry {
  background: #f5f5f5;
  color: #666;
}

.progress-indicator {
  padding: 16rpx;
}

.mini-spinner {
  width: 32rpx;
  height: 32rpx;
  border: 3rpx solid #f0f0f0;
  border-top-color: #FF9800;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

/* Loading states */
.loading-wrap {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f0f0f0;
  border-top-color: #1890FF;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

.loading-spinner.small {
  width: 36rpx;
  height: 36rpx;
  border-width: 3rpx;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #999;
}

.loading-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 32rpx;
  gap: 12rpx;
  font-size: 26rpx;
  color: #999;
}

.no-more {
  text-align: center;
  padding: 32rpx;
  font-size: 26rpx;
  color: #ccc;
}

/* Empty state */
.empty-wrap {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 48rpx;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  opacity: 0.5;
  margin-bottom: 24rpx;
}

.empty-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 32rpx;
}

.empty-btn {
  padding: 20rpx 48rpx;
  background: #1890FF;
  color: #fff;
  font-size: 28rpx;
  border-radius: 40rpx;
  border: none;
}

.empty-btn::after {
  display: none;
}

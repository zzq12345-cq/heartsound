/* Detection Result Page Styles */

.result-page {
  min-height: 100vh;
  background: #F5F5F5;
  padding-bottom: calc(32rpx + env(safe-area-inset-bottom));
}

/* Animation */
.result-page.animated .result-section,
.result-page.animated .suggestions-section,
.result-page.animated .actions-section {
  animation: slideUp 0.5s ease forwards;
}

.result-page.animated .result-section { animation-delay: 0.1s; }
.result-page.animated .suggestions-section { animation-delay: 0.2s; }
.result-page.animated .actions-section { animation-delay: 0.3s; }

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(40rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Header */
.header {
  position: relative;
  padding: 88rpx 32rpx 48rpx;
  overflow: hidden;
}

.header-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, #1890FF 0%, #096DD9 100%);
}

.header-content {
  position: relative;
  z-index: 1;
}

.header-title {
  display: block;
  font-size: 40rpx;
  font-weight: 700;
  color: #FFFFFF;
  margin-bottom: 8rpx;
}

.header-time {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* Result section */
.result-section {
  margin: -24rpx 32rpx 32rpx;
  opacity: 0;
}

/* Suggestions section */
.suggestions-section {
  margin: 0 32rpx 32rpx;
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  opacity: 0;
}

.section-header {
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.suggestions-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.suggestion-item {
  display: flex;
  align-items: flex-start;
  padding: 20rpx;
  background: #F8F9FA;
  border-radius: 16rpx;
  opacity: 0;
  animation: fadeIn 0.4s ease forwards;
}

@keyframes fadeIn {
  to { opacity: 1; }
}

.suggestion-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.suggestion-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

/* Actions section */
.actions-section {
  margin: 0 32rpx 32rpx;
  opacity: 0;
}

.action-row {
  margin-bottom: 20rpx;
}

.action-row:last-child {
  margin-bottom: 0;
}

.secondary-actions {
  display: flex;
  gap: 20rpx;
}

.secondary-actions .action-btn {
  flex: 1;
}

.action-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 96rpx;
  border-radius: 48rpx;
  border: none;
  font-size: 30rpx;
}

.action-btn::after {
  border: none;
}

.action-btn.primary {
  background: linear-gradient(135deg, #1890FF 0%, #096DD9 100%);
  color: #FFFFFF;
  box-shadow: 0 8rpx 24rpx rgba(24, 144, 255, 0.3);
}

.action-btn.secondary {
  background: #FFFFFF;
  color: #333;
  border: 2rpx solid #E0E0E0;
}

.action-btn.text {
  background: transparent;
  color: #999;
  height: 80rpx;
}

.btn-icon {
  font-size: 36rpx;
  margin-right: 12rpx;
}

.btn-text {
  font-weight: 500;
}

/* Disclaimer section */
.disclaimer-section {
  margin: 0 32rpx;
}

.disclaimer-card {
  display: flex;
  align-items: flex-start;
  padding: 24rpx;
  background: #FFF8E1;
  border-radius: 16rpx;
  border: 2rpx solid #FFE082;
}

.disclaimer-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.disclaimer-text {
  font-size: 24rpx;
  color: #F57C00;
  line-height: 1.6;
}

/* Share float button */
.share-float {
  position: fixed;
  right: 32rpx;
  bottom: calc(120rpx + env(safe-area-inset-bottom));
  width: 100rpx;
  height: 100rpx;
  background: #FFFFFF;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  z-index: 100;
}

.share-icon {
  font-size: 48rpx;
}

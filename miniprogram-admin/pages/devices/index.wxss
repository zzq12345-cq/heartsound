.container {
  min-height: 100vh;
  background-color: #F5F5F5;
  display: flex;
  align-items: center;
  justify-content: center;
}

.placeholder-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 48rpx;
}

.placeholder-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
}

.placeholder-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 16rpx;
}

.placeholder-desc {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 24rpx;
}

.placeholder-hint {
  font-size: 24rpx;
  color: #999999;
  padding: 12rpx 24rpx;
  background: rgba(24, 144, 255, 0.1);
  border-radius: 24rpx;
}

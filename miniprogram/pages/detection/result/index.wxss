/* Detection Result Page Styles */
/* 设计语言：静谧医疗感 · 青蓝色点缀 · 雾面质感 */

.result-page {
  min-height: 100vh;
  background: #F4F5F7;
  padding-bottom: calc(32rpx + env(safe-area-inset-bottom));
}

/* Animation */
.result-page.animated .result-section,
.result-page.animated .suggestions-section,
.result-page.animated .actions-section {
  animation: slideUp 0.5s ease forwards;
}

.result-page.animated .result-section { animation-delay: 0.1s; }
.result-page.animated .suggestions-section { animation-delay: 0.2s; }
.result-page.animated .actions-section { animation-delay: 0.3s; }

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(40rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Header */
.header {
  padding: 88rpx 32rpx 32rpx;
}

.header-bg {
  display: none;
}

.header-content {
  display: flex;
  flex-direction: column;
}

.header-title {
  display: block;
  font-size: 40rpx;
  font-weight: 700;
  color: #2C2E33;
  margin-bottom: 8rpx;
}

.header-time {
  font-size: 26rpx;
  color: #7A7D85;
}

/* Result section */
.result-section {
  margin: 0 32rpx 32rpx;
  opacity: 0;
}

/* Suggestions section */
.suggestions-section {
  margin: 0 32rpx 32rpx;
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 32rpx;
  border: 1rpx solid #EBEBED;
  opacity: 0;
}

.section-header {
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2C2E33;
}

.suggestions-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.suggestion-item {
  display: flex;
  align-items: flex-start;
  padding: 20rpx;
  background: #F4F5F7;
  border-radius: 16rpx;
  opacity: 0;
  animation: fadeIn 0.4s ease forwards;
}

@keyframes fadeIn {
  to { opacity: 1; }
}

.suggestion-text {
  font-size: 28rpx;
  color: #5A5D66;
  line-height: 1.5;
  margin-left: 16rpx;
}

/* Actions section */
.actions-section {
  margin: 0 32rpx 32rpx;
  opacity: 0;
}

.action-row {
  margin-bottom: 20rpx;
}

.action-row:last-child {
  margin-bottom: 0;
}

.secondary-actions {
  display: flex;
  gap: 20rpx;
}

.secondary-actions .action-btn {
  flex: 1;
}

.action-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 96rpx;
  border-radius: 999rpx;
  border: none;
  font-size: 30rpx;
}

.action-btn::after {
  border: none;
}

.action-btn.primary {
  background: #2E8B8B;
  color: #FFFFFF;
}

.action-btn.secondary {
  background: #FFFFFF;
  color: #2C2E33;
  border: 1rpx solid #EBEBED;
}

.action-btn.text {
  background: transparent;
  color: #7A7D85;
  height: 80rpx;
}

.btn-text {
  font-weight: 500;
  margin-left: 12rpx;
}

/* Disclaimer section */
.disclaimer-section {
  margin: 0 32rpx;
}

.disclaimer-card {
  display: flex;
  align-items: flex-start;
  padding: 24rpx;
  background: #FBF6EC;
  border-radius: 24rpx;
  border: 1rpx solid #E8D5A0;
}

.disclaimer-text {
  font-size: 24rpx;
  color: #C48A30;
  line-height: 1.6;
  margin-left: 16rpx;
}

/* Share float button */
.share-float {
  position: fixed;
  right: 32rpx;
  bottom: calc(120rpx + env(safe-area-inset-bottom));
  width: 100rpx;
  height: 100rpx;
  background: #FFFFFF;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1rpx solid #EBEBED;
  z-index: 100;
}

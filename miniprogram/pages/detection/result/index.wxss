/* Detection Result Page Styles */
/* 设计语言：清透医疗感 · 浅蓝色点缀 · 雾面质感 */

.result-page {
  min-height: 100vh;
  background: #F4F5F7;
  padding-bottom: calc(32rpx + env(safe-area-inset-bottom));
}

/* Animation */
.result-page.animated .result-section,
.result-page.animated .suggestions-section,
.result-page.animated .actions-section {
  animation: slideUp 0.5s ease forwards;
}

.result-page.animated .result-section { animation-delay: 0.1s; }
.result-page.animated .suggestions-section { animation-delay: 0.2s; }
.result-page.animated .actions-section { animation-delay: 0.3s; }

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(40rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Header */
.header {
  padding: 88rpx 32rpx 32rpx;
}

.header-bg {
  display: none;
}

.header-content {
  display: flex;
  flex-direction: column;
}

.header-title {
  display: block;
  font-size: 40rpx;
  font-weight: 700;
  color: #2C2E33;
  margin-bottom: 8rpx;
}

.header-time {
  font-size: 26rpx;
  color: #7A7D85;
}

/* Result section */
.result-section {
  margin: 0 32rpx 32rpx;
  opacity: 0;
}

/* Suggestions section */
.suggestions-section {
  margin: 0 32rpx 32rpx;
  background: var(--color-bg-card);
  border-radius: var(--radius-lg);
  padding: var(--spacing-lg);
  border: 1rpx solid var(--color-border);
  box-shadow: var(--shadow-sm);
  opacity: 0;
}

.section-header {
  margin-bottom: var(--spacing-md);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2C2E33;
}

.suggestions-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.suggestion-item {
  display: flex;
  align-items: flex-start;
  padding: 20rpx;
  background: #F4F5F7;
  border-radius: var(--radius-md);
  opacity: 0;
  animation: fadeIn 0.4s ease forwards;
}

@keyframes fadeIn {
  to { opacity: 1; }
}

.suggestion-text {
  font-size: 28rpx;
  color: #5A5D66;
  line-height: 1.5;
  margin-left: 16rpx;
}

/* Actions section */
.actions-section {
  margin: 0 32rpx 32rpx;
  opacity: 0;
}

.action-row {
  margin-bottom: 20rpx;
}

.action-row:last-child {
  margin-bottom: 0;
}

.secondary-actions {
  display: flex;
  gap: 20rpx;
}

.secondary-actions .action-btn {
  flex: 1;
}

.action-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 96rpx;
  border-radius: var(--radius-full);
  border: none;
  font-size: var(--font-size-body);
  font-weight: 500;
  transition: transform 0.15s ease, box-shadow 0.15s ease;
}

.action-btn::after {
  border: none;
}

.action-btn.primary {
  background: var(--color-primary);
  color: var(--color-text-white);
  box-shadow: 0 8rpx 24rpx rgba(74, 144, 217, 0.25);
}

.action-btn.primary:active {
  transform: scale(0.97);
  box-shadow: 0 4rpx 12rpx rgba(74, 144, 217, 0.15);
}

.action-btn.secondary {
  background: var(--color-bg-card);
  color: var(--color-text-primary);
  border: 1rpx solid var(--color-border);
}

.action-btn.secondary:active {
  background: var(--color-border-light);
}

.action-btn.text {
  background: transparent;
  color: var(--color-text-hint);
  height: 80rpx;
}

.action-btn.text:active {
  opacity: 0.6;
}

.btn-text {
  font-weight: 500;
  margin-left: 12rpx;
}

/* Disclaimer section */
.disclaimer-section {
  margin: 0 32rpx;
}

.disclaimer-card {
  display: flex;
  align-items: flex-start;
  padding: 24rpx;
  background: #FBF6EC;
  border-radius: var(--radius-lg);
  border: 1rpx solid #E8D5A0;
}

.disclaimer-text {
  font-size: 24rpx;
  color: #C48A30;
  line-height: 1.6;
  margin-left: 16rpx;
}

/* Share float button */
.share-float {
  position: fixed;
  right: 32rpx;
  bottom: calc(120rpx + env(safe-area-inset-bottom));
  width: 100rpx;
  height: 100rpx;
  background: var(--color-bg-card);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1rpx solid var(--color-border);
  box-shadow: var(--shadow-md);
  z-index: 100;
  transition: transform 0.15s ease;
}

.share-float:active {
  transform: scale(0.92);
}

/* Emergency contact section */
.emergency-section {
  margin: 0 32rpx 32rpx;
}

.emergency-btn {
  width: 100%;
  height: 96rpx;
  background: #C75450;
  color: #FFFFFF;
  border-radius: var(--radius-full);
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  padding: 0;
  animation: pulseEmergency 2s ease-in-out infinite;
}

.emergency-btn::after {
  border: none;
}

.emergency-btn.outline {
  background: #FFFFFF;
  border: 2rpx solid #C75450;
  animation: none;
}

.emergency-btn.outline::after {
  border: none;
}

.emergency-btn-text {
  color: #FFFFFF;
  font-weight: 600;
  margin-left: 12rpx;
}

.emergency-btn-text-outline {
  color: #C75450;
  font-weight: 600;
  margin-left: 12rpx;
}

@keyframes pulseEmergency {
  0%, 100% {
    box-shadow: 0 0 0 0 rgba(199, 84, 80, 0.4);
  }
  50% {
    box-shadow: 0 0 0 16rpx rgba(199, 84, 80, 0);
  }
}

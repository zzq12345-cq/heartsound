<!--
  Login Page - Admin Authentication
  管理员登录页面 - 临床洁净风设计
-->

<view class="container">
  <!-- 品牌区域 -->
  <view class="brand-section">
    <!-- Logo -->
    <view class="logo">
      <image class="logo-image" src="/static/images/logo.svg" mode="aspectFit" />
    </view>

    <!-- 品牌名称 -->
    <text class="brand-title">心音智鉴</text>
    <text class="brand-subtitle">HeartSound Admin</text>
  </view>

  <!-- 登录区域 -->
  <view class="login-section">
    <text class="login-hint">使用已授权的微信账号登录管理后台</text>

    <!-- 登录按钮 -->
    <button
      class="login-btn {{loading ? 'is-loading' : ''}}"
      bindtap="onLoginTap"
      disabled="{{loading}}"
    >
      <view wx:if="{{loading}}" class="btn-loading">
        <view class="spinner"></view>
        <text>验证身份中</text>
      </view>
      <text wx:else>微信一键登录</text>
    </button>

    <!-- 错误提示 -->
    <view wx:if="{{errorMessage}}" class="error-toast" bindtap="clearError">
      <text class="error-text">{{errorMessage}}</text>
      <text class="error-close">×</text>
    </view>
  </view>

  <!-- 底部信息 -->
  <view class="footer">
    <text class="footer-text">仅限授权管理员访问</text>
  </view>
</view>

<!-- Loading Heart Component Template -->
<view class="loading-heart-container">
  <!-- Pulse rings -->
  <view class="pulse-ring ring-1" style="border-color: {{color}}20;"></view>
  <view class="pulse-ring ring-2" style="border-color: {{color}}15;"></view>
  <view class="pulse-ring ring-3" style="border-color: {{color}}10;"></view>

  <!-- Heart icon -->
  <view class="heart-wrapper" style="width: {{size}}rpx; height: {{size}}rpx;">
    <view class="heart-icon" style="background-color: {{color}};">
      <icon-svg name="heart" size="60" color="#FFFFFF" />
    </view>
  </view>

  <!-- ECG line animation -->
  <view class="ecg-line-container">
    <view class="ecg-line" style="background: linear-gradient(90deg, transparent, {{color}}, transparent);"></view>
  </view>

  <!-- Loading text -->
  <view class="loading-text-wrapper">
    <text class="loading-text">{{text}}</text>
    <view class="loading-dots">
      <text class="dot dot-1">.</text>
      <text class="dot dot-2">.</text>
      <text class="dot dot-3">.</text>
    </view>
  </view>

  <!-- Estimated time -->
  <text class="estimated-time" wx:if="{{showTime}}">
    预计需要 {{estimatedSeconds}} 秒
  </text>
</view>

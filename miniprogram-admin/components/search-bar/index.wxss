/* Search Bar Component Styles */

.search-bar {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background: #fff;
  gap: 16rpx;
}

/* 搜索输入框 */
.search-input-wrap {
  flex: 1;
  display: flex;
  align-items: center;
  height: 72rpx;
  padding: 0 20rpx;
  background: #f5f5f5;
  border-radius: 36rpx;
}

.search-icon {
  width: 36rpx;
  height: 36rpx;
  opacity: 0.5;
}

.search-input {
  flex: 1;
  height: 100%;
  margin-left: 12rpx;
  font-size: 28rpx;
  color: #333;
}

.placeholder {
  color: #999;
}

.clear-icon {
  width: 32rpx;
  height: 32rpx;
  padding: 8rpx;
  opacity: 0.5;
}

/* 筛选按钮 */
.filter-btn {
  display: flex;
  align-items: center;
  padding: 12rpx 20rpx;
  background: #f5f5f5;
  border-radius: 36rpx;
  gap: 8rpx;
}

.filter-text {
  font-size: 26rpx;
  color: #333;
  white-space: nowrap;
}

.filter-arrow {
  width: 24rpx;
  height: 24rpx;
  transition: transform 0.2s;
}

.filter-arrow.rotate {
  transform: rotate(180deg);
}

/* 筛选下拉 */
.filter-dropdown-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.3);
  z-index: 100;
}

.filter-dropdown {
  position: absolute;
  top: 180rpx;
  right: 24rpx;
  min-width: 200rpx;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
  overflow: hidden;
}

.filter-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
  font-size: 28rpx;
  color: #333;
}

.filter-item:not(:last-child) {
  border-bottom: 1rpx solid #f0f0f0;
}

.filter-item.active {
  color: #1890FF;
  background: #e6f7ff;
}

.check-icon {
  width: 32rpx;
  height: 32rpx;
}

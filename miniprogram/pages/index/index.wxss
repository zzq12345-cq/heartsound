/* =====================================================================
   Index Page · 首页样式
   设计语言：静谧医疗感 · 青蓝色点缀 · 雾面质感
   主色 #2E8B8B (Teal) · 辅助 #5B7FA5 (Steel Blue)
   ===================================================================== */

/* ── Page Shell ─────────────────────────────────────────────────────── */
.page-container {
  min-height: 100vh;
  padding: 0 36rpx calc(60rpx + 120rpx);
  background: #F4F5F7;
  overflow: hidden;
}

/* ── Hero ────────────────────────────────────────────────────────────
   顶部视觉焦点区，用模糊光球营造安宁氛围                               */
.hero {
  position: relative;
  padding: 72rpx 0 56rpx;
  margin: 0 -36rpx;
  padding-left: 36rpx;
  padding-right: 36rpx;
  overflow: hidden;
}

/* 背景光球 — 两团柔和的冷调雾蓝光晕 */
.hero-bg-orb {
  position: absolute;
  border-radius: 50%;
  filter: blur(80rpx);
  opacity: 0.45;
  pointer-events: none;
}
.hero-orb-1 {
  width: 320rpx;
  height: 320rpx;
  background: #B8DFE0;
  top: -60rpx;
  right: -40rpx;
  animation: orb-drift-1 8s ease-in-out infinite alternate;
}
.hero-orb-2 {
  width: 240rpx;
  height: 240rpx;
  background: #D0E8EA;
  bottom: -30rpx;
  left: 20rpx;
  animation: orb-drift-2 10s ease-in-out infinite alternate;
}
@keyframes orb-drift-1 {
  0%   { transform: translate(0, 0) scale(1); }
  100% { transform: translate(-20rpx, 16rpx) scale(1.08); }
}
@keyframes orb-drift-2 {
  0%   { transform: translate(0, 0) scale(1); }
  100% { transform: translate(14rpx, -12rpx) scale(0.92); }
}

.hero-content {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: space-between;
  z-index: 1;
}

.hero-text {
  display: flex;
  flex-direction: column;
}
.hero-greeting {
  font-size: 48rpx;
  font-weight: 700;
  color: #1F2024;
  letter-spacing: -0.5rpx;
  line-height: 1.15;
}
.hero-tagline {
  margin-top: 10rpx;
  font-size: 26rpx;
  color: #7A7D85;
  font-weight: 400;
  letter-spacing: 1rpx;
}

/* 心跳脉冲环 */
.hero-pulse-ring {
  position: relative;
  width: 108rpx;
  height: 108rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.pulse-ring-outer,
.pulse-ring-inner {
  position: absolute;
  border-radius: 50%;
  border: 2rpx solid rgba(46, 139, 139, 0.25);
}
.pulse-ring-outer {
  width: 108rpx;
  height: 108rpx;
  animation: pulse-expand 2.4s cubic-bezier(0.4, 0, 0.6, 1) infinite;
}
.pulse-ring-inner {
  width: 80rpx;
  height: 80rpx;
  animation: pulse-expand 2.4s cubic-bezier(0.4, 0, 0.6, 1) 0.4s infinite;
}
@keyframes pulse-expand {
  0%   { transform: scale(0.85); opacity: 0.7; }
  70%  { transform: scale(1.25); opacity: 0; }
  100% { transform: scale(1.25); opacity: 0; }
}

/* ── Section Shared ──────────────────────────────────────────────── */
.card-section {
  margin-bottom: 40rpx;
}

.card-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 18rpx;
  padding: 0 4rpx;
}
.card-header-label {
  font-size: 26rpx;
  font-weight: 600;
  color: #3C3E44;
  letter-spacing: 0.5rpx;
}
.card-header-sub {
  font-size: 22rpx;
  color: #A0A3AB;
}

/* ── Status Pill ─────────────────────────────────────────────────── */
.status-pill {
  display: flex;
  align-items: center;
  padding: 6rpx 18rpx;
  border-radius: 100rpx;
  background: rgba(192, 196, 206, 0.15);
}
.status-pill.connected {
  background: rgba(46, 139, 139, 0.1);
}
.status-pill-dot {
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  background: #C2C7CF;
  margin-right: 10rpx;
}
.status-pill.connected .status-pill-dot {
  background: #2E8B8B;
  animation: dot-breathe 2s ease-in-out infinite;
}
@keyframes dot-breathe {
  0%, 100% { opacity: 1; box-shadow: 0 0 0 0 rgba(46,139,139,0.4); }
  50%      { opacity: 0.65; box-shadow: 0 0 0 6rpx rgba(46,139,139,0); }
}
.status-pill-text {
  font-size: 20rpx;
  font-weight: 500;
  color: #A0A3AB;
}
.status-pill.connected .status-pill-text {
  color: #2E8B8B;
}

/* ── CTA Button ──────────────────────────────────────────────────── */
.cta-section {
  margin-bottom: 40rpx;
}
.cta-btn {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx 32rpx;
  border-radius: 28rpx;
  background: linear-gradient(135deg, #2E8B8B 0%, #267878 100%);
  box-shadow:
    0 8rpx 28rpx -4rpx rgba(46, 139, 139, 0.3),
    0 2rpx 6rpx rgba(0, 0, 0, 0.05);
  transition: transform 0.2s, box-shadow 0.2s;
}
.cta-btn:active {
  transform: scale(0.975);
  box-shadow: 0 4rpx 14rpx rgba(46, 139, 139, 0.2);
}
.cta-btn--disabled {
  background: #FFFFFF;
  border: 2rpx dashed #DCDEE3;
  box-shadow: none;
}
.cta-btn--disabled:active {
  transform: none;
}
.cta-btn-inner {
  display: flex;
  align-items: center;
  gap: 20rpx;
}
.cta-btn-text-group {
  display: flex;
  flex-direction: column;
}
.cta-btn-label {
  font-size: 30rpx;
  font-weight: 600;
  color: #FFFFFF;
}
.cta-btn--disabled .cta-btn-label {
  color: #B0B4BC;
}
.cta-btn-sub {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.72);
  margin-top: 2rpx;
}

/* ── Device Card ─────────────────────────────────────────────────── */
.device-card {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 32rpx;
  border: 1rpx solid #EBEBED;
  transition: border-color 0.3s;
}
.device-card.connected {
  border-color: rgba(46, 139, 139, 0.3);
}
.device-card-row {
  display: flex;
  align-items: center;
}
.device-avatar {
  width: 84rpx;
  height: 84rpx;
  border-radius: 20rpx;
  background: #F4F5F7;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  transition: background 0.3s;
}
.device-avatar.connected {
  background: rgba(46, 139, 139, 0.08);
}
.device-meta {
  flex: 1;
  display: flex;
  flex-direction: column;
}
.device-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #2C2E33;
}
.device-detail {
  font-size: 22rpx;
  color: #A0A3AB;
  margin-top: 4rpx;
}
.device-chevron {
  display: flex;
  align-items: center;
}

/* ── Connect Grid ────────────────────────────────────────────────── */
.connect-grid {
  display: flex;
  gap: 20rpx;
}
.connect-card {
  flex: 1;
  background: #FFFFFF;
  border: 1rpx solid #EBEBED;
  border-radius: 24rpx;
  padding: 36rpx 24rpx 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: transform 0.15s, box-shadow 0.15s;
}
.connect-card:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}
.connect-card-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 22rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
}
.scan-icon {
  background: linear-gradient(135deg, #2E8B8B 0%, #3DA8A8 100%);
  box-shadow: 0 6rpx 16rpx rgba(46, 139, 139, 0.25);
}
.manual-icon {
  background: linear-gradient(135deg, #5B7FA5 0%, #7A9BBD 100%);
  box-shadow: 0 6rpx 16rpx rgba(91, 127, 165, 0.25);
}
.connect-card-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #2C2E33;
  margin-bottom: 4rpx;
}
.connect-card-sub {
  font-size: 20rpx;
  color: #A0A3AB;
}

/* ── Quick Stats ─────────────────────────────────────────────────── */
.stats-row {
  background: #FFFFFF;
  border-radius: 24rpx;
  border: 1rpx solid #EBEBED;
  padding: 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.stat-block {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}
.stat-num {
  font-size: 42rpx;
  font-weight: 700;
  color: #2C2E33;
  font-variant-numeric: tabular-nums;
  letter-spacing: -1rpx;
}
.stat-num.safe    { color: #3CB371; }
.stat-num.warning { color: #D4A24C; }
.stat-num.danger  { color: #C75450; }
.stat-label {
  font-size: 22rpx;
  color: #A0A3AB;
  margin-top: 6rpx;
}
.stat-sep {
  width: 1rpx;
  height: 56rpx;
  background: #EBEBED;
}

/* ── Health Tips ──────────────────────────────────────────────────── */
.tip-card {
  background: #FFFFFF;
  border-radius: 24rpx;
  border: 1rpx solid #EBEBED;
  padding: 24rpx 28rpx;
}
.tip-swiper {
  height: 150rpx;
}
.tip-slide {
  display: flex;
  flex-direction: column;
  padding-bottom: 32rpx;
}
.tip-tag {
  display: inline-block;
  font-size: 18rpx;
  color: #2E8B8B;
  background: rgba(46, 139, 139, 0.08);
  padding: 4rpx 14rpx;
  border-radius: 6rpx;
  margin-bottom: 12rpx;
  align-self: flex-start;
}
.tip-body {
  font-size: 24rpx;
  color: #5A5D66;
  line-height: 1.7;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* ── Footer ──────────────────────────────────────────────────────── */
.page-footer {
  padding: 48rpx 0 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.footer-disclaimer {
  text-align: center;
  font-size: 20rpx;
  color: #C2C7CF;
  line-height: 1.6;
  max-width: 80%;
  margin-bottom: 10rpx;
}
.footer-ver {
  font-size: 18rpx;
  color: #D5D7DC;
  letter-spacing: 1rpx;
}

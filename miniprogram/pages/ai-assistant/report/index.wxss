/* AI Health Report Page Styles */

.report-container {
  min-height: 100vh;
  background-color: #F5F7FA;
  padding-bottom: calc(40rpx + env(safe-area-inset-bottom));
}

/* Header */
.report-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background: #FFFFFF;
  border-bottom: 1rpx solid #EEEEEE;
}

.header-title {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
}

.title-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.header-action {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 20rpx;
  background: #F5F5F5;
  border-radius: 30rpx;
}

.action-text {
  font-size: 24rpx;
  color: #666666;
}

/* Type Selector */
.type-selector {
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
  background: #FFFFFF;
  margin-bottom: 20rpx;
}

.type-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx 20rpx;
  background: #F8F9FA;
  border-radius: var(--radius-md);
  border: 2rpx solid transparent;
  transition: all 0.2s;
}

.type-item.active {
  background: #E6F4FF;
  border-color: #4A90D9;
}

.type-label {
  font-size: 30rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 8rpx;
}

.type-item.active .type-label {
  color: #4A90D9;
}

.type-period {
  font-size: 22rpx;
  color: #999999;
}

/* Stats Card */
.stats-card {
  margin: 0 30rpx 20rpx;
  padding: 30rpx;
  background: #FFFFFF;
  border-radius: var(--radius-md);
  box-shadow: var(--shadow-sm);
}

.stats-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: var(--spacing-md);
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: var(--spacing-sm);
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
  background: #F8F9FA;
  border-radius: 12rpx;
}

.stat-value {
  font-size: 40rpx;
  font-weight: 700;
  color: #333333;
  margin-bottom: 8rpx;
}

.stat-item.safe .stat-value {
  color: #4CAF50;
}

.stat-item.warning .stat-value {
  color: #FF9800;
}

.stat-item.danger .stat-value {
  color: #F44336;
}

.stat-label {
  font-size: 22rpx;
  color: #999999;
}

.stats-footer {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #EEEEEE;
}

.confidence-label {
  font-size: 24rpx;
  color: #666666;
}

.confidence-value {
  font-size: 28rpx;
  font-weight: 600;
  color: #4A90D9;
}

/* No Data Card */
.no-data-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 30rpx;
  margin: 0 30rpx;
  background: #FFFFFF;
  border-radius: var(--radius-md);
}

.no-data-text {
  font-size: 28rpx;
  color: #666666;
  margin-top: 20rpx;
}

.no-data-tip {
  font-size: 24rpx;
  color: #999999;
  margin-top: 12rpx;
  text-align: center;
}

/* Generate Section */
.generate-section {
  padding: 30rpx;
}

.generate-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: var(--spacing-sm);
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #4A90D9, #3A7BD5);
  border-radius: 48rpx;
  font-size: 30rpx;
  font-weight: 600;
  color: #FFFFFF;
  border: none;
}

.generate-btn.loading {
  background: #BBBBBB;
}

.generate-btn::after {
  border: none;
}

/* Loading Dots Animation */
.loading-dots {
  display: flex;
  gap: 8rpx;
}

.loading-dots .dot {
  width: 12rpx;
  height: 12rpx;
  background: #FFFFFF;
  border-radius: 50%;
  animation: dotPulse 1.4s ease-in-out infinite;
}

.loading-dots .dot:nth-child(1) {
  animation-delay: 0s;
}

.loading-dots .dot:nth-child(2) {
  animation-delay: 0.2s;
}

.loading-dots .dot:nth-child(3) {
  animation-delay: 0.4s;
}

@keyframes dotPulse {
  0%, 80%, 100% {
    opacity: 0.3;
    transform: scale(0.8);
  }
  40% {
    opacity: 1;
    transform: scale(1);
  }
}

/* Report Content */
.report-content {
  padding: 0 30rpx;
}

.report-card {
  background: #FFFFFF;
  border-radius: var(--radius-md);
  overflow: hidden;
  box-shadow: var(--shadow-sm);
}

.report-header-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 24rpx;
  background: #F8F9FA;
  border-bottom: 1rpx solid #EEEEEE;
}

.report-type-badge {
  padding: 8rpx 20rpx;
  background: #4A90D9;
  border-radius: 20rpx;
}

.report-type-badge text {
  font-size: 22rpx;
  color: #FFFFFF;
}

.report-actions {
  display: flex;
  gap: var(--spacing-sm);
}

.share-btn {
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #FFFFFF;
  border-radius: 50%;
}

.share-btn:active {
  background: #EEEEEE;
}

.report-body {
  padding: 30rpx 24rpx;
  min-height: 300rpx;
}

.report-text {
  font-size: 28rpx;
  color: #333333;
  line-height: 1.8;
  white-space: pre-wrap;
}

.report-footer {
  padding: 16rpx 24rpx;
  background: #F8F9FA;
  border-top: 1rpx solid #EEEEEE;
}

.generated-time {
  font-size: 22rpx;
  color: #999999;
}

/* Report Disclaimer */
.report-disclaimer {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
  margin-top: 20rpx;
  padding: 20rpx;
  background: #FFF8E1;
  border-radius: 12rpx;
  border: 1rpx solid #FFE082;
}

.disclaimer-text {
  flex: 1;
  font-size: 22rpx;
  color: #F57C00;
  line-height: 1.5;
}

/* History Section */
.history-section {
  margin-top: 30rpx;
  padding: 0 30rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 20rpx;
}

.history-list {
  background: #FFFFFF;
  border-radius: var(--radius-md);
  overflow: hidden;
}

.history-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.history-item:last-child {
  border-bottom: none;
}

.history-item:active {
  background: #F8F9FA;
}

.history-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.history-type {
  font-size: 28rpx;
  color: #333333;
}

.history-date {
  font-size: 22rpx;
  color: #999999;
}

/* Report Period Tag (in header bar) */
.report-period-tag {
  padding: 6rpx 16rpx;
  background: #E6F4FF;
  border-radius: var(--radius-md);
  margin-left: 12rpx;
}

.report-period-tag text {
  font-size: 20rpx;
  color: #4A90D9;
}

/* History Title Row */
.history-title-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

/* History Period Tag */
.history-period-tag {
  font-size: 20rpx;
  color: #4A90D9;
  background: #E6F4FF;
  padding: 4rpx 14rpx;
  border-radius: 12rpx;
}

/* History Empty State */
.history-empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 30rpx;
  background: #FFFFFF;
  border-radius: var(--radius-md);
}

.history-empty-text {
  font-size: 28rpx;
  color: #999999;
}

.history-empty-tip {
  font-size: 24rpx;
  color: #CCCCCC;
  margin-top: 12rpx;
}

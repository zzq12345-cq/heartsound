/* Detection Page Styles - Entry Point */

.detection-page {
  min-height: 100vh;
  background: #F5F5F5;
  display: flex;
  flex-direction: column;
}

/* Header section */
.header-section {
  position: relative;
  padding: 88rpx 32rpx 60rpx;
  overflow: hidden;
}

.header-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, #1890FF 0%, #096DD9 100%);
}

.header-content {
  position: relative;
  z-index: 1;
  text-align: center;
}

.header-title {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  color: #FFFFFF;
  margin-bottom: 12rpx;
}

.header-subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* Main content */
.main-content {
  flex: 1;
  margin-top: -32rpx;
  padding: 0 32rpx;
  position: relative;
  z-index: 10;
}

/* Status card */
.status-card {
  display: flex;
  align-items: center;
  padding: 32rpx;
  background: #FFFFFF;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  margin-bottom: 40rpx;
}

.status-icon-wrapper {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
}

.status-card.connected .status-icon-wrapper {
  background: rgba(76, 175, 80, 0.1);
}

.status-card.disconnected .status-icon-wrapper {
  background: rgba(255, 152, 0, 0.1);
}

.status-icon {
  font-size: 40rpx;
}

.status-info {
  flex: 1;
}

.status-text {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 4rpx;
}

.status-hint {
  font-size: 24rpx;
  color: #999;
}

/* Start section */
.start-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
}

.start-btn-wrapper {
  position: relative;
}

.start-btn {
  width: 280rpx;
  height: 280rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.start-btn.active {
  background: linear-gradient(135deg, #1890FF 0%, #096DD9 100%);
  box-shadow: 0 16rpx 48rpx rgba(24, 144, 255, 0.4);
}

.start-btn.disabled {
  background: #BDBDBD;
}

/* Pulse animation */
.pulse-ring {
  position: absolute;
  border-radius: 50%;
  border: 4rpx solid rgba(24, 144, 255, 0.3);
  animation: pulse-expand 2s ease-out infinite;
}

.pulse-ring.r1 {
  width: 320rpx;
  height: 320rpx;
  animation-delay: 0s;
}

.pulse-ring.r2 {
  width: 380rpx;
  height: 380rpx;
  animation-delay: 0.5s;
}

@keyframes pulse-expand {
  0% {
    transform: scale(0.8);
    opacity: 1;
  }
  100% {
    transform: scale(1.3);
    opacity: 0;
  }
}

.btn-inner {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.btn-icon {
  font-size: 72rpx;
  margin-bottom: 8rpx;
}

.btn-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #FFFFFF;
}

.start-hint {
  margin-top: 24rpx;
  font-size: 26rpx;
  color: #999;
}

/* Tip section */
.tip-section {
  margin-bottom: 40rpx;
}

.tip-card {
  display: flex;
  align-items: flex-start;
  padding: 24rpx;
  background: #FFF8E1;
  border-radius: 16rpx;
  border: 2rpx solid #FFE082;
}

.tip-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.tip-content {
  font-size: 26rpx;
  color: #F57C00;
  line-height: 1.6;
}

.tip-indicators {
  display: flex;
  justify-content: center;
  gap: 12rpx;
  margin-top: 16rpx;
}

.tip-dot {
  width: 12rpx;
  height: 12rpx;
  background: #E0E0E0;
  border-radius: 50%;
  transition: all 0.3s ease;
}

.tip-dot.active {
  width: 24rpx;
  border-radius: 6rpx;
  background: #FF9800;
}

/* Records section */
.records-section {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 24rpx;
  margin-bottom: 32rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.section-more {
  font-size: 26rpx;
  color: #1890FF;
}

.records-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.record-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #F8F9FA;
  border-radius: 16rpx;
}

.record-icon {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
  font-size: 28rpx;
}

.record-icon.safe { background: rgba(76, 175, 80, 0.1); }
.record-icon.warning { background: rgba(255, 152, 0, 0.1); }
.record-icon.danger { background: rgba(244, 67, 54, 0.1); }

.record-info {
  flex: 1;
}

.record-label {
  display: block;
  font-size: 28rpx;
  color: #333;
}

.record-time {
  font-size: 22rpx;
  color: #999;
}

.record-arrow {
  color: #CCC;
  font-size: 28rpx;
}

/* Disclaimer */
.disclaimer {
  text-align: center;
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
}

.disclaimer text {
  font-size: 22rpx;
  color: #999;
}

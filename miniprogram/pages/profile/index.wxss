.page-container { padding: var(--spacing-lg); min-height: 100vh; padding-bottom: 120rpx; }
.profile-header { text-align: center; padding: var(--spacing-xl) 0; }
.avatar { font-size: 120rpx; margin-bottom: var(--spacing-md); }
.nickname { display: block; font-size: var(--font-size-h2); font-weight: 600; color: var(--color-text-primary); }
.stats-section { display: flex; justify-content: space-around; padding: var(--spacing-lg); }
.stat-item { text-align: center; }
.stat-value { display: block; font-size: var(--font-size-h1); font-weight: 700; color: var(--color-text-primary); }
.stat-value.safe { color: var(--color-success); }
.stat-value.warning { color: var(--color-warning); }
.stat-label { display: block; font-size: var(--font-size-caption); color: var(--color-text-hint); margin-top: var(--spacing-xs); }
.menu-section { padding: 0; }
.menu-item { display: flex; align-items: center; padding: var(--spacing-lg); border-bottom: 1rpx solid var(--color-border-light); }
.menu-item:last-child { border-bottom: none; }
.menu-icon { font-size: 40rpx; margin-right: var(--spacing-md); }
.menu-text { flex: 1; font-size: var(--font-size-body); color: var(--color-text-primary); }
.menu-arrow { font-size: 32rpx; color: var(--color-text-hint); }
.dev-notice { text-align: center; margin-top: var(--spacing-xl); font-size: var(--font-size-caption); color: var(--color-primary); }

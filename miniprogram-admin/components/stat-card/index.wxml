<!--
  Stat Card Component
  统计卡片组件模板
-->

<view class="stat-card theme-{{theme}}" bindtap="onTap">
  <!-- 加载状态 -->
  <view wx:if="{{loading}}" class="stat-loading">
    <view class="loading-dot"></view>
    <view class="loading-dot"></view>
    <view class="loading-dot"></view>
  </view>

  <!-- 正常内容 -->
  <view wx:else class="stat-content">
    <!-- 标题行 -->
    <view class="stat-header">
      <text class="stat-title">{{title}}</text>
      <view class="stat-icon icon-{{icon}}"></view>
    </view>

    <!-- 数值 -->
    <view class="stat-value">{{formattedValue}}</view>

    <!-- 趋势/副标题 -->
    <view class="stat-footer">
      <view wx:if="{{trend !== null}}" class="stat-trend {{trendClass}}">
        <text class="trend-icon">{{trendIcon}}</text>
        <text class="trend-value">{{trend >= 0 ? '+' : ''}}{{trend}}%</text>
      </view>
      <text wx:if="{{subtitle}}" class="stat-subtitle">{{subtitle}}</text>
    </view>
  </view>
</view>

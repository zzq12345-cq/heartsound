/* Device Detail Page Styles */

.page {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 40rpx;
}

/* 加载状态 */
.loading-wrap {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f0f0f0;
  border-top-color: #1890FF;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #999;
}

/* 设备头部 */
.device-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 48rpx 24rpx;
  background: linear-gradient(135deg, #1890FF 0%, #40a9ff 100%);
}

.device-header.offline {
  background: linear-gradient(135deg, #999 0%, #bbb 100%);
}

.device-icon-wrap {
  width: 120rpx;
  height: 120rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.device-icon {
  width: 64rpx;
  height: 64rpx;
  filter: brightness(0) invert(1);
}

.device-main-info {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
  gap: 16rpx;
}

.device-id {
  font-size: 36rpx;
  font-weight: 600;
  color: #fff;
}

.status-badge {
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.status-badge.online {
  background: rgba(76, 175, 80, 0.3);
  color: #fff;
}

.status-badge.offline {
  background: rgba(255, 255, 255, 0.2);
  color: #fff;
}

.device-ip {
  margin-top: 12rpx;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 通用section */
.section-title {
  padding: 24rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  background: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}

/* 基本信息 */
.info-section {
  margin-top: 16rpx;
  background: #fff;
}

.info-list {
  padding: 0 24rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 28rpx;
  color: #666;
}

.info-value {
  font-size: 28rpx;
  color: #333;
}

/* 使用统计 */
.stats-section {
  margin-top: 16rpx;
  background: #fff;
}

.stats-grid {
  display: flex;
  padding: 24rpx;
}

.stat-item {
  flex: 1;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-item .stat-value {
  font-size: 48rpx;
  font-weight: 600;
  color: #1890FF;
}

.stat-item .stat-label {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #999;
}

/* 分配信息 */
.assign-section {
  margin-top: 16rpx;
  background: #fff;
}

.assigned-user {
  display: flex;
  align-items: center;
  padding: 24rpx;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #f0f0f0;
}

.user-info {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
}

.user-name {
  font-size: 30rpx;
  color: #333;
}

.assign-status {
  margin-top: 6rpx;
  font-size: 24rpx;
  color: #4CAF50;
}

.unassign-btn {
  padding: 12rpx 24rpx;
  background: #ffebee;
  border-radius: 8rpx;
}

.unassign-btn text {
  font-size: 26rpx;
  color: #F44336;
}

.not-assigned {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
}

.not-assigned-text {
  font-size: 28rpx;
  color: #999;
}

.assign-btn {
  padding: 16rpx 32rpx;
  background: #1890FF;
  border-radius: 8rpx;
}

.assign-btn text {
  font-size: 28rpx;
  color: #fff;
}

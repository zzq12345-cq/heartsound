/* Detection Page Styles - Entry Point */
/* 设计语言：静谧医疗感 · 青蓝色点缀 · 雾面质感 */

/* ============================================================================
   Page Container & Background Orbs
   ============================================================================ */
.detection-page {
  min-height: 100vh;
  background: #F4F5F7;
  display: flex;
  flex-direction: column;
  position: relative;
  overflow: hidden;
}

/* Background orbs - matching homepage hero style */
.hero-bg-orb {
  position: absolute;
  border-radius: 50%;
  filter: blur(80rpx);
  opacity: 0.45;
  pointer-events: none;
}

.hero-orb-1 {
  width: 320rpx;
  height: 320rpx;
  background: #B8DFE0;
  top: -60rpx;
  right: -40rpx;
  animation: orb-drift-1 8s ease-in-out infinite alternate;
}

.hero-orb-2 {
  width: 240rpx;
  height: 240rpx;
  background: #D0E8EA;
  top: 200rpx;
  left: -40rpx;
  animation: orb-drift-2 10s ease-in-out infinite alternate;
}

@keyframes orb-drift-1 {
  0%   { transform: translate(0, 0) scale(1); }
  100% { transform: translate(-20rpx, 16rpx) scale(1.08); }
}

@keyframes orb-drift-2 {
  0%   { transform: translate(0, 0) scale(1); }
  100% { transform: translate(14rpx, -12rpx) scale(0.92); }
}

/* ============================================================================
   Header Section - Simplified (no blue background)
   ============================================================================ */
.header-section {
  position: relative;
  padding: 100rpx 32rpx 48rpx;
  overflow: hidden;
}

.header-content {
  position: relative;
  z-index: 1;
  display: flex;
  align-items: center;
  gap: var(--spacing-md);
}

.header-icon-wrapper {
  width: 88rpx;
  height: 88rpx;
  border-radius: 22rpx;
  background: rgba(74, 144, 217, 0.08);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.header-text-group {
  display: flex;
  flex-direction: column;
}

.header-title {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  color: #1F2024;
  letter-spacing: -0.5rpx;
  line-height: 1.15;
}

.header-subtitle {
  font-size: 26rpx;
  color: #7A7D85;
  letter-spacing: 1rpx;
  margin-top: 6rpx;
}

/* ============================================================================
   Main Content
   ============================================================================ */
.main-content {
  flex: 1;
  padding: 0 32rpx;
  position: relative;
  z-index: 10;
}

/* ============================================================================
   Device Status Card
   ============================================================================ */
.status-card {
  display: flex;
  align-items: center;
  padding: 28rpx 24rpx;
  background: #FFFFFF;
  border-radius: var(--radius-lg);
  border: 1rpx solid #EBEBED;
  margin-bottom: var(--spacing-lg);
  position: relative;
  overflow: hidden;
  transition: all 0.3s ease;
}

.status-card.connected {
  border-color: rgba(60, 179, 113, 0.3);
}

.status-glow {
  position: absolute;
  top: -50%;
  right: -20%;
  width: 200rpx;
  height: 200rpx;
  background: radial-gradient(circle, rgba(60, 179, 113, 0.15) 0%, transparent 70%);
  pointer-events: none;
}

.status-icon-wrapper {
  position: relative;
  margin-right: 20rpx;
}

.status-icon-bg {
  width: 72rpx;
  height: 72rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.status-icon-bg.connected {
  background: rgba(60, 179, 113, 0.1);
}

.status-icon-bg.disconnected {
  background: rgba(212, 162, 76, 0.1);
}

.status-pulse {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 72rpx;
  height: 72rpx;
  border-radius: 20rpx;
  transform: translate(-50%, -50%);
  border: 2rpx solid rgba(60, 179, 113, 0.4);
  animation: status-pulse 2s ease-out infinite;
}

@keyframes status-pulse {
  0% { transform: translate(-50%, -50%) scale(1); opacity: 1; }
  100% { transform: translate(-50%, -50%) scale(1.5); opacity: 0; }
}

.status-info {
  flex: 1;
}

.status-row {
  display: flex;
  align-items: center;
  margin-bottom: 6rpx;
}

.status-text {
  font-size: 30rpx;
  font-weight: 600;
  color: #2C2E33;
  margin-right: 12rpx;
}

.status-badge {
  display: flex;
  align-items: center;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.status-badge.online {
  background: rgba(60, 179, 113, 0.1);
}

.status-badge.offline {
  background: rgba(160, 163, 171, 0.15);
}

.badge-dot {
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  margin-right: 6rpx;
}

.status-badge.online .badge-dot {
  background: #3CB371;
  animation: dot-pulse 1.5s ease-in-out infinite;
}

.status-badge.offline .badge-dot {
  background: #A0A3AB;
}

@keyframes dot-pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.4; }
}

.badge-text {
  font-size: 20rpx;
  color: #7A7D85;
}

.status-badge.online .badge-text {
  color: #3CB371;
}

.status-hint {
  font-size: 24rpx;
  color: #7A7D85;
}

.status-arrow {
  display: flex;
  align-items: center;
}

/* ============================================================================
   Start Detection Section
   ============================================================================ */
.start-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0 40rpx;
}

.start-btn-wrapper {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.outer-ring-container {
  position: absolute;
  width: 320rpx;
  height: 320rpx;
}

.outer-ring {
  position: absolute;
  top: 50%;
  left: 50%;
  border-radius: 50%;
  border: 3rpx solid;
  transform: translate(-50%, -50%);
  animation: ring-expand 3s ease-out infinite;
}

.outer-ring.r1 {
  width: 260rpx;
  height: 260rpx;
  border-color: rgba(74, 144, 217, 0.4);
  animation-delay: 0s;
}

.outer-ring.r2 {
  width: 300rpx;
  height: 300rpx;
  border-color: rgba(74, 144, 217, 0.25);
  animation-delay: 0.8s;
}

.outer-ring.r3 {
  width: 340rpx;
  height: 340rpx;
  border-color: rgba(74, 144, 217, 0.15);
  animation-delay: 1.6s;
}

@keyframes ring-expand {
  0% { transform: translate(-50%, -50%) scale(0.8); opacity: 1; }
  100% { transform: translate(-50%, -50%) scale(1.4); opacity: 0; }
}

.start-btn {
  width: 240rpx;
  height: 240rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  z-index: 2;
  transition: all 0.3s ease;
}

.start-btn.active {
  background: #4A90D9;
}

.start-btn.active:active {
  transform: scale(0.95);
}

.start-btn.disabled {
  background: #C2C7CF;
}

.btn-inner {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.btn-icon-wrapper {
  margin-bottom: 8rpx;
}

.btn-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #FFFFFF;
}

/* Info Cards */
.info-cards {
  display: flex;
  justify-content: center;
  gap: var(--spacing-md);
  margin-top: 40rpx;
  width: 100%;
}

.info-card {
  flex: 1;
  max-width: 180rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 16rpx;
  background: #FFFFFF;
  border-radius: var(--radius-md);
  border: 1rpx solid #EBEBED;
}

.info-text {
  font-size: 26rpx;
  font-weight: 600;
  color: #2C2E33;
  margin-top: 8rpx;
}

.info-label {
  font-size: 20rpx;
  color: #7A7D85;
  margin-top: 4rpx;
}

/* ============================================================================
   Tips Section
   ============================================================================ */
.tip-section {
  margin-bottom: 28rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
  padding: 0 8rpx;
}

.section-title-wrapper {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #2C2E33;
}

.section-more {
  display: flex;
  align-items: center;
  gap: 4rpx;
}

.section-more text {
  font-size: 26rpx;
  color: #4A90D9;
}

.tip-swiper {
  height: 140rpx;
}

.tip-card {
  display: flex;
  align-items: flex-start;
  padding: 24rpx;
  background: #FBF6EC;
  border-radius: 20rpx;
  border: 2rpx solid rgba(212, 162, 76, 0.2);
  height: 100%;
  box-sizing: border-box;
}

.tip-number {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background: #D4A24C;
  color: #FFFFFF;
  font-size: 22rpx;
  font-weight: 700;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.tip-content {
  font-size: 26rpx;
  color: #6B5A2E;
  line-height: 1.7;
  flex: 1;
}

.tip-indicators {
  display: flex;
  justify-content: center;
  gap: 12rpx;
  margin-top: 16rpx;
}

.tip-dot {
  width: 12rpx;
  height: 12rpx;
  background: #C2C7CF;
  border-radius: 50%;
  transition: all 0.3s ease;
}

.tip-dot.active {
  width: 28rpx;
  border-radius: 6rpx;
  background: #D4A24C;
}

/* ============================================================================
   Records Section
   ============================================================================ */
.records-section {
  background: #FFFFFF;
  border-radius: var(--radius-lg);
  padding: 24rpx;
  margin-bottom: 28rpx;
  border: 1rpx solid #EBEBED;
}

.records-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.record-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #F4F5F7;
  border-radius: var(--radius-md);
  transition: all 0.2s ease;
}

.record-item-hover {
  background: #F0F1F3;
  transform: scale(0.99);
}

.record-icon-wrapper {
  width: 56rpx;
  height: 56rpx;
  border-radius: var(--radius-md);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
}

.record-icon-wrapper.safe {
  background: rgba(60, 179, 113, 0.1);
}

.record-icon-wrapper.warning {
  background: rgba(212, 162, 76, 0.1);
}

.record-icon-wrapper.danger {
  background: rgba(199, 84, 80, 0.1);
}

.record-info {
  flex: 1;
}

.record-label {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #2C2E33;
  margin-bottom: 4rpx;
}

.record-time {
  font-size: 22rpx;
  color: #7A7D85;
}

.record-result {
  padding: 6rpx 16rpx;
  border-radius: var(--radius-sm);
  margin-right: 12rpx;
}

.record-result text {
  font-size: 22rpx;
  font-weight: 500;
}

.record-result.safe {
  background: rgba(60, 179, 113, 0.1);
}

.record-result.safe text {
  color: #3CB371;
}

.record-result.warning {
  background: rgba(212, 162, 76, 0.1);
}

.record-result.warning text {
  color: #D4A24C;
}

.record-result.danger {
  background: rgba(199, 84, 80, 0.1);
}

.record-result.danger text {
  color: #C75450;
}

.record-arrow {
  display: flex;
  align-items: center;
}

/* ============================================================================
   Empty State
   ============================================================================ */
.empty-records {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 32rpx;
  background: #FFFFFF;
  border-radius: var(--radius-lg);
  margin-bottom: 28rpx;
  border: 1rpx solid #EBEBED;
}

.empty-icon {
  margin-bottom: 20rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 28rpx;
  color: #5A5D66;
  margin-bottom: 8rpx;
}

.empty-hint {
  font-size: 24rpx;
  color: #7A7D85;
}

/* ============================================================================
   Disclaimer
   ============================================================================ */
.disclaimer {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  text-align: center;
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
}

.disclaimer text {
  font-size: 22rpx;
  color: #A0A3AB;
}

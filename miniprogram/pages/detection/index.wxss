.page-container { padding: var(--spacing-lg); min-height: 100vh; display: flex; flex-direction: column; align-items: center; justify-content: center; }
.status-section { text-align: center; margin-bottom: var(--spacing-xl); }
.status-icon { font-size: 120rpx; margin-bottom: var(--spacing-md); }
.status-text { display: block; font-size: var(--font-size-h2); font-weight: 600; color: var(--color-text-primary); }
.status-hint { display: block; font-size: var(--font-size-body); color: var(--color-text-hint); margin-top: var(--spacing-sm); }
.action-section { width: 100%; padding: 0 var(--spacing-xl); }
.hint-text { display: block; text-align: center; font-size: var(--font-size-caption); color: var(--color-text-hint); margin-top: var(--spacing-lg); }

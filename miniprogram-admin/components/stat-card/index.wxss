/* 数值 - 更大更醒目 */
.stat-value {
  font-size: 52rpx;
  font-weight: 800;
  color: #2C3E50;
  margin-bottom: 12rpx;
  letter-spacing: -1rpx;
  line-height: 1.1;
}

/* 底部 - 趋势和副标题 */
.stat-footer {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-top: 4rpx;
}

.stat-trend {
  display: inline-flex;
  align-items: center;
  font-size: 22rpx;
  font-weight: 600;
  padding: 6rpx 14rpx;
  border-radius: 12rpx;
  gap: 4rpx;
}

.trend-icon {
  font-size: 20rpx;
}

.trend-up {
  background: linear-gradient(135deg, rgba(92, 184, 92, 0.12) 0%, rgba(126, 217, 135, 0.12) 100%);
  color: #5CB85C;
}

.trend-down {
  background: linear-gradient(135deg, rgba(226, 92, 92, 0.12) 0%, rgba(240, 128, 128, 0.12) 100%);
  color: #E25C5C;
}

.trend-flat {
  background: rgba(127, 140, 154, 0.1);
  color: #7F8C9A;
}

.stat-subtitle {
  font-size: 24rpx;
  color: #A8B5C2;
  font-weight: 400;
}

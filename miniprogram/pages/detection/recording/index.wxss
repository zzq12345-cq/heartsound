/**
 * Detection Recording Page Styles
 * 检测录制页样式 - 统一设计语言版
 */

/* ==================== 页面容器 ==================== */
.recording-page {
  min-height: 100vh;
  background: linear-gradient(180deg, #F0F7FF 0%, #F8FAFC 15%, #F5F7FA 100%);
  display: flex;
  flex-direction: column;
  position: relative;
  overflow: hidden;
}

/* ==================== 顶部Header ==================== */
.header {
  width: 100%;
  padding: 100rpx 32rpx 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.header-spacer {
  flex: 1;
}

.close-btn {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background: #FFFFFF;
  border-radius: 999rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.04);
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.close-btn:active {
  background: #F5F7FA;
  transform: scale(0.98);
}

/* ==================== 主内容区 ==================== */
.main-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 32rpx;
}

/* ==================== 倒计时区域 ==================== */
.countdown-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 20rpx;
}

/* 倒计时环容器 */
.countdown-ring-wrapper {
  position: relative;
  width: 320rpx;
  height: 320rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 进度环 */
.countdown-ring {
  width: 320rpx;
  height: 320rpx;
  border-radius: 50%;
  background: #FFFFFF;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

/* 进度条 - conic-gradient */
.countdown-progress {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background: conic-gradient(
    from -90deg,
    #1890FF 0%,
    #40A9FF var(--progress, 0%),
    #E8E8E8 var(--progress, 0%),
    #E8E8E8 100%
  );
  mask: radial-gradient(transparent 125rpx, #000 126rpx);
  -webkit-mask: radial-gradient(transparent 125rpx, #000 126rpx);
  transition: all 1s linear;
}

/* 内圈 - 显示倒计时数字 */
.countdown-inner {
  width: 260rpx;
  height: 260rpx;
  border-radius: 50%;
  background: #FFFFFF;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  z-index: 2;
}

.countdown-number {
  font-size: 96rpx;
  font-weight: 700;
  line-height: 1;
  color: #1890FF;
}

.countdown-unit {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
  letter-spacing: 4rpx;
}

/* ==================== 状态文字 ==================== */
.status-wrapper {
  display: flex;
  align-items: center;
  margin-top: 40rpx;
}

.status-text {
  font-size: 28rpx;
  color: #666;
  font-weight: 500;
  letter-spacing: 2rpx;
}

.status-dots {
  display: flex;
  align-items: center;
  margin-left: 8rpx;
}

.status-dots .dot {
  width: 8rpx;
  height: 8rpx;
  background: #999;
  border-radius: 50%;
  margin-left: 6rpx;
  animation: dot-bounce 1.4s ease-in-out infinite;
}

.status-dots .dot.d1 { animation-delay: 0s; }
.status-dots .dot.d2 { animation-delay: 0.2s; }
.status-dots .dot.d3 { animation-delay: 0.4s; }

@keyframes dot-bounce {
  0%, 80%, 100% { transform: scale(1); opacity: 0.4; }
  40% { transform: scale(1.3); opacity: 1; }
}

/* ==================== 波形区域 ==================== */
.waveform-section {
  width: 100%;
  padding: 32rpx 0;
}

.waveform-card {
  background: #FFFFFF;
  border-radius: 24rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.04);
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.waveform-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 28rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.04);
  background: #F8FAFC;
}

.waveform-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.waveform-label {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
}

/* LIVE指示器 */
.waveform-indicator {
  display: flex;
  align-items: center;
  gap: 10rpx;
  padding: 10rpx 18rpx;
  background: #F0F0F0;
  border-radius: 24rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.04);
}

.waveform-indicator.active {
  background: rgba(76, 175, 80, 0.1);
  border-color: rgba(76, 175, 80, 0.2);
}

.indicator-dot {
  width: 12rpx;
  height: 12rpx;
  background: #999;
  border-radius: 50%;
}

.waveform-indicator.active .indicator-dot {
  background: #4CAF50;
  animation: live-pulse 1s ease-in-out infinite;
}

@keyframes live-pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.4; }
}

.indicator-text {
  font-size: 20rpx;
  color: #999;
  font-weight: 700;
  letter-spacing: 2rpx;
}

.waveform-indicator.active .indicator-text {
  color: #4CAF50;
}

/* 波形容器 */
.waveform-container {
  position: relative;
  height: 160rpx;
  background: #F8FAFC;
}

/* 心率整合到波形底部 */
.heart-rate-inline {
  display: flex;
  align-items: center;
  padding: 20rpx 28rpx;
  background: #F8FAFC;
  gap: 12rpx;
  opacity: 0;
  transform: translateY(10rpx);
  transition: all 0.3s ease;
}

.heart-rate-inline.show {
  opacity: 1;
  transform: translateY(0);
}

.hr-icon-wrapper {
  animation: heartbeat 1s ease-in-out infinite;
}

@keyframes heartbeat {
  0%, 100% { transform: scale(1); }
  14% { transform: scale(1.15); }
  28% { transform: scale(1); }
  42% { transform: scale(1.1); }
}

.hr-value {
  font-size: 40rpx;
  font-weight: 700;
  color: #333;
  line-height: 1;
  font-variant-numeric: tabular-nums;
}

.hr-unit {
  font-size: 22rpx;
  color: #999;
}

.hr-status {
  margin-left: auto;
  font-size: 22rpx;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  font-weight: 500;
}

.hr-status.safe {
  color: #4CAF50;
  background: rgba(76, 175, 80, 0.1);
}

/* ==================== 底部区域 ==================== */
.bottom-section {
  margin-top: auto;
  padding: 0 32rpx;
  padding-bottom: env(safe-area-inset-bottom);
}

/* 进度区域 */
.progress-section {
  padding: 24rpx 16rpx;
}

.progress-bar-wrapper {
  position: relative;
}

.progress-bar {
  width: 100%;
  height: 12rpx;
  background: #E8E8E8;
  border-radius: 8rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #1890FF, #40A9FF);
  border-radius: 8rpx;
  transition: width 0.3s ease;
}

/* 进度标签 */
.progress-labels {
  display: flex;
  justify-content: space-between;
  margin-top: 16rpx;
}

.progress-elapsed,
.progress-total {
  font-size: 24rpx;
  color: #999;
  font-weight: 500;
}

.progress-elapsed {
  color: #666;
}

/* 底部提示横幅 */
.tip-banner {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 20rpx;
  padding: 28rpx 32rpx;
  margin-top: 16rpx;
  margin-bottom: 24rpx;
  background: rgba(24, 144, 255, 0.06);
  border-radius: 24rpx;
  border: 1rpx solid rgba(24, 144, 255, 0.1);
}

.tip-banner .tip-icon-wrapper {
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(24, 144, 255, 0.1);
  border-radius: 50%;
  flex-shrink: 0;
}

.tip-banner .tip-text {
  font-size: 28rpx;
  color: #666;
  font-weight: 500;
}

/**
 * HeartSound Admin - Global Styles
 * 心音智鉴管理后台 - 全局样式
 */

/* ========== CSS变量 - 现代医疗风格配色 ========== */
page {
  /* 主色系 - 柔和医疗蓝 */
  --primary-color: #4A90E2;
  --primary-light: #F0F7FF;
  --primary-gradient: linear-gradient(135deg, #667EEA 0%, #64B5F6 100%);

  /* 功能色 - 低饱和度 */
  --success-color: #5CB85C;
  --success-light: #F0FAF0;
  --warning-color: #F5A623;
  --warning-light: #FFF9F0;
  --danger-color: #E25C5C;
  --danger-light: #FFF0F0;

  /* 文字色 - 深灰蓝替代纯黑 */
  --text-primary: #2C3E50;
  --text-secondary: #7F8C9A;
  --text-tertiary: #A8B5C2;

  /* 背景色 */
  --bg-primary: #F8FAFB;
  --bg-white: #FFFFFF;
  --border-color: #E8EEF3;

  /* 阴影 - Soft UI风格 */
  --shadow-soft: 0 4rpx 16rpx rgba(149, 157, 165, 0.08), 0 12rpx 32rpx rgba(149, 157, 165, 0.06);
  --shadow-light: 0 2rpx 8rpx rgba(149, 157, 165, 0.08);
  --shadow-medium: 0 8rpx 24rpx rgba(149, 157, 165, 0.12);

  font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
  font-size: 28rpx;
  color: var(--text-primary);
  background-color: var(--bg-primary);
  box-sizing: border-box;
  -webkit-font-smoothing: antialiased;
}

/* ========== 通用布局 ========== */
.container {
  min-height: 100vh;
  background-color: var(--bg-primary);
  padding-bottom: env(safe-area-inset-bottom);
}

.page-content {
  padding: 24rpx;
}

.flex-row {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.flex-column {
  display: flex;
  flex-direction: column;
}

.flex-between {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.flex-center {
  display: flex;
  justify-content: center;
  align-items: center;
}

.flex-1 {
  flex: 1;
}

/* ========== 卡片样式 ========== */
.card {
  background-color: var(--bg-white);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: var(--shadow-light);
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 16rpx;
}

/* ========== 按钮样式 ========== */
.btn-primary {
  background: linear-gradient(135deg, #1890FF 0%, #36CFC9 100%);
  color: #FFFFFF;
  border-radius: 48rpx;
  padding: 24rpx 48rpx;
  font-size: 32rpx;
  font-weight: 500;
  text-align: center;
  border: none;
}

.btn-primary::after {
  border: none;
}

.btn-primary:active {
  opacity: 0.9;
  transform: scale(0.98);
}

.btn-outline {
  background-color: transparent;
  color: var(--primary-color);
  border: 2rpx solid var(--primary-color);
  border-radius: 48rpx;
  padding: 24rpx 48rpx;
  font-size: 32rpx;
  font-weight: 500;
  text-align: center;
}

/* ========== 文字样式 ========== */
.text-primary {
  color: var(--primary-color);
}

.text-success {
  color: var(--success-color);
}

.text-warning {
  color: var(--warning-color);
}

.text-danger {
  color: var(--danger-color);
}

.text-secondary {
  color: var(--text-secondary);
}

.text-tertiary {
  color: var(--text-tertiary);
}

.text-bold {
  font-weight: 600;
}

.text-center {
  text-align: center;
}

/* ========== 空状态 ========== */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 48rpx;
  color: var(--text-tertiary);
}

.empty-state-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

.empty-state-text {
  font-size: 28rpx;
}

/* ========== 加载状态 ========== */
.loading-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 48rpx;
}

.loading-text {
  color: var(--text-tertiary);
  font-size: 26rpx;
  margin-top: 16rpx;
}

/* ========== 分割线 ========== */
.divider {
  height: 1rpx;
  background-color: var(--border-color);
  margin: 24rpx 0;
}

/* ========== 标签样式 ========== */
.tag {
  display: inline-flex;
  align-items: center;
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.tag-success {
  background-color: rgba(82, 196, 26, 0.1);
  color: var(--success-color);
}

.tag-warning {
  background-color: rgba(250, 173, 20, 0.1);
  color: var(--warning-color);
}

.tag-danger {
  background-color: rgba(255, 77, 79, 0.1);
  color: var(--danger-color);
}

.tag-default {
  background-color: rgba(24, 144, 255, 0.1);
  color: var(--primary-color);
}

/* ========== 动画 ========== */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.fade-in {
  animation: fadeIn 0.3s ease-out;
}

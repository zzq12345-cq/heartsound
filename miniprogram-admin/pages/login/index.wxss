/**
 * Login Page Styles
 * 管理员登录页面样式 - 临床洁净风 (Clinical Clean)
 *
 * 设计理念：
 * - 纯净灰白背景，营造医疗级专业感
 * - 大量留白，呼吸感强
 * - 去除花哨装饰，专注核心功能
 * - 深海蓝按钮，稳重可信赖
 */

/* ========== 容器 ========== */
.container {
  min-height: 100vh;
  background-color: #F7F8FA;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 48rpx;
  box-sizing: border-box;
}

/* ========== 品牌区域 ========== */
.brand-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 180rpx;
  margin-bottom: 80rpx;
}

.logo {
  width: 96rpx;
  height: 96rpx;
  background: linear-gradient(135deg, #1A365D 0%, #2D4A6F 100%);
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 32rpx;
  /* 精致阴影 */
  box-shadow:
    0 8rpx 24rpx rgba(26, 54, 93, 0.15),
    0 2rpx 8rpx rgba(26, 54, 93, 0.08);
}

.logo-image {
  width: 56rpx;
  height: 56rpx;
}

.brand-title {
  font-size: 44rpx;
  font-weight: 700;
  color: #1A202C;
  letter-spacing: 2rpx;
  margin-bottom: 8rpx;
}

.brand-subtitle {
  font-size: 24rpx;
  font-weight: 500;
  color: #A0AEC0;
  letter-spacing: 4rpx;
  text-transform: uppercase;
}

/* ========== 登录区域 ========== */
.login-section {
  width: 100%;
  max-width: 600rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.login-hint {
  font-size: 28rpx;
  color: #718096;
  text-align: center;
  line-height: 1.6;
  margin-bottom: 48rpx;
  letter-spacing: 0.5rpx;
}

/* ========== 登录按钮 - 深海蓝纯色 ========== */
.login-btn {
  width: 100%;
  height: 100rpx;
  background-color: #1A365D;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  padding: 0;
  margin: 0;
  color: #FFFFFF;
  font-size: 32rpx;
  font-weight: 600;
  letter-spacing: 1rpx;
  /* 微妙阴影，增加层次感 */
  box-shadow:
    0 4rpx 16rpx rgba(26, 54, 93, 0.2),
    0 8rpx 32rpx rgba(26, 54, 93, 0.1);
  transition: all 0.2s ease;
}

.login-btn::after {
  border: none;
}

/* 按钮按下效果 */
.login-btn:active:not(.is-loading) {
  transform: translateY(2rpx);
  box-shadow:
    0 2rpx 8rpx rgba(26, 54, 93, 0.2),
    0 4rpx 16rpx rgba(26, 54, 93, 0.1);
}

/* 加载状态 */
.login-btn.is-loading {
  background-color: #2D4A6F;
}

.btn-loading {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  color: #FFFFFF;
  font-size: 30rpx;
  font-weight: 500;
}

.spinner {
  width: 32rpx;
  height: 32rpx;
  border: 3rpx solid rgba(255, 255, 255, 0.3);
  border-top-color: #FFFFFF;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

/* ========== 错误提示 ========== */
.error-toast {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  margin-top: 32rpx;
  padding: 24rpx 28rpx;
  background-color: #FFF5F5;
  border: 1rpx solid #FED7D7;
  border-radius: 12rpx;
  box-sizing: border-box;
}

.error-text {
  font-size: 26rpx;
  color: #C53030;
  flex: 1;
  line-height: 1.5;
}

.error-close {
  font-size: 36rpx;
  color: #C53030;
  opacity: 0.6;
  padding-left: 16rpx;
}

/* ========== 底部信息 ========== */
.footer {
  position: absolute;
  bottom: 80rpx;
  left: 0;
  right: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom: env(safe-area-inset-bottom);
}

.footer-text {
  font-size: 24rpx;
  color: #A0AEC0;
  letter-spacing: 0.5rpx;
}

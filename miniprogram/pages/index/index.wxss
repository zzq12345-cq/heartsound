/* =====================================================================
   Index Page · 首页样式
   设计语言：清透医疗感 · 浅蓝色点缀 · 雾面质感
   主色 #4A90D9 (Light Blue) · 辅助 #5B7FA5 (Steel Blue)
   ===================================================================== */

/* ── Page Shell ─────────────────────────────────────────────────────── */
.page-container {
  min-height: 100vh;
  padding: 0 36rpx calc(60rpx + 120rpx);
  background: #F4F5F7;
  overflow: hidden;
}

/* ── Hero ────────────────────────────────────────────────────────────
   顶部视觉焦点区 · Teal → Deep Ocean Blue 渐变 + 装饰纹理            */
.hero {
  position: relative;
  padding: 60rpx 40rpx 48rpx;
  margin: 0 -36rpx;
  overflow: hidden;
  background: linear-gradient(180deg, #FFFFFF 0%, #F7F8FA 100%);
  border-bottom: 1rpx solid #EBEBED;
}
/* Thin gradient accent bar at top */
.hero::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: linear-gradient(90deg, #4A90D9, #7EB8DA, #B8D4EE);
  z-index: 3;
}

/* ── Hero Decorative Elements · 低透明度纹理装饰 ──────────────────── */
.hero-deco {
  position: absolute;
  border-radius: 50%;
  pointer-events: none;
}
/* 左下方大圆 — 极淡蓝色光晕 */
.hero-deco--circle1 {
  width: 320rpx;
  height: 320rpx;
  left: -100rpx;
  bottom: -120rpx;
  background: radial-gradient(circle, rgba(74,144,217,0.04) 0%, transparent 70%);
}
/* 右上方小圆 — 点缀 */
.hero-deco--circle2 {
  width: 200rpx;
  height: 200rpx;
  right: 60rpx;
  top: -60rpx;
  background: radial-gradient(circle, rgba(74,144,217,0.03) 0%, transparent 70%);
}
/* 中间偏右波纹 — 弧形装饰 */
.hero-deco--wave {
  width: 500rpx;
  height: 500rpx;
  right: -200rpx;
  bottom: -280rpx;
  border-radius: 50%;
  border: 2rpx solid rgba(74,144,217,0.04);
  background: transparent;
}

.hero-content {
  position: relative;
  z-index: 2;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.hero-text {
  display: flex;
  flex-direction: column;
}
.hero-greeting {
  font-size: 48rpx;
  font-weight: 700;
  color: #2C2E33;
  letter-spacing: -0.5rpx;
  line-height: 1.15;
}
.hero-tagline {
  margin-top: 10rpx;
  font-size: 26rpx;
  color: #A0A3AB;
  font-weight: 400;
  letter-spacing: 1.5rpx;
}

/* 心跳脉冲环 */
.hero-pulse-ring {
  position: relative;
  width: 116rpx;
  height: 116rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(74, 144, 217, 0.06);
  border-radius: 50%;
}
.pulse-ring-outer,
.pulse-ring-inner {
  position: absolute;
  border-radius: 50%;
  border: 2rpx solid rgba(74, 144, 217, 0.25);
}
.pulse-ring-outer {
  width: 116rpx;
  height: 116rpx;
  animation: pulse-expand 2.4s cubic-bezier(0.4, 0, 0.6, 1) infinite;
}
.pulse-ring-inner {
  width: 84rpx;
  height: 84rpx;
  animation: pulse-expand 2.4s cubic-bezier(0.4, 0, 0.6, 1) 0.4s infinite;
}
@keyframes pulse-expand {
  0%   { transform: scale(0.85); opacity: 0.7; }
  70%  { transform: scale(1.25); opacity: 0; }
  100% { transform: scale(1.25); opacity: 0; }
}

/* ── Section Shared ──────────────────────────────────────────────── */
.card-section {
  margin-bottom: 40rpx;
}

.card-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 18rpx;
  padding: 0 4rpx;
}
.card-header-label {
  font-size: 26rpx;
  font-weight: 600;
  color: #3C3E44;
  letter-spacing: 0.5rpx;
}
.card-header-sub {
  font-size: 22rpx;
  color: #A0A3AB;
}

/* ── Status Pill ─────────────────────────────────────────────────── */
.status-pill {
  display: flex;
  align-items: center;
  padding: 6rpx 18rpx;
  border-radius: 100rpx;
  background: rgba(192, 196, 206, 0.15);
}
.status-pill.connected {
  background: rgba(74, 144, 217, 0.1);
}
.status-pill-dot {
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  background: #C2C7CF;
  margin-right: 10rpx;
}
.status-pill.connected .status-pill-dot {
  background: #4A90D9;
  animation: dot-breathe 2s ease-in-out infinite;
}
@keyframes dot-breathe {
  0%, 100% { opacity: 1; box-shadow: 0 0 0 0 rgba(74,144,217,0.4); }
  50%      { opacity: 0.65; box-shadow: 0 0 0 6rpx rgba(74,144,217,0); }
}
.status-pill-text {
  font-size: 20rpx;
  font-weight: 500;
  color: #A0A3AB;
}
.status-pill.connected .status-pill-text {
  color: #4A90D9;
}

/* ── CTA Button · 胶囊悬浮核心按钮 ───────────────────────────────── */
.cta-section {
  margin: 36rpx 20rpx 48rpx;
}
.cta-btn {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 36rpx;
  border-radius: 60rpx;
  background: linear-gradient(
    135deg,
    #5BA3E6 0%,
    #4A90D9 40%,
    #3A7BD5 100%
  );
  /* Key: multi-layer diffuse shadow for floating effect */
  box-shadow:
    0 12rpx 40rpx -6rpx rgba(74, 144, 217, 0.45),
    0 6rpx 16rpx -2rpx rgba(74, 144, 217, 0.2),
    0 2rpx 6rpx rgba(0, 0, 0, 0.06);
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}
.cta-btn:active {
  transform: scale(0.97) translateY(2rpx);
  box-shadow:
    0 6rpx 20rpx -4rpx rgba(74, 144, 217, 0.3),
    0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}
.cta-btn--disabled {
  background: #FFFFFF;
  border: 2rpx dashed #DCDEE3;
  border-radius: 60rpx;
  box-shadow: none;
}
.cta-btn--disabled:active {
  transform: none;
  box-shadow: none;
}
.cta-btn-inner {
  display: flex;
  align-items: center;
  gap: 20rpx;
}
.cta-btn-text-group {
  display: flex;
  flex-direction: column;
}
.cta-btn-label {
  font-size: 30rpx;
  font-weight: 600;
  color: #FFFFFF;
}
.cta-btn--disabled .cta-btn-label {
  color: #B0B4BC;
}
.cta-btn-sub {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.72);
  margin-top: 2rpx;
}

/* ── Device Card ─────────────────────────────────────────────────── */
.device-card {
  background: #FFFFFF;
  border-radius: var(--radius-lg);
  padding: var(--spacing-lg);
  border: 1rpx solid #EBEBED;
  box-shadow: var(--shadow-md);
  transition: border-color 0.3s, box-shadow 0.3s;
}
.device-card.connected {
  border-color: rgba(74, 144, 217, 0.3);
}
.device-card-row {
  display: flex;
  align-items: center;
}
.device-avatar {
  width: 84rpx;
  height: 84rpx;
  border-radius: 20rpx;
  background: #F4F5F7;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  transition: background 0.3s;
}
.device-avatar.connected {
  background: rgba(74, 144, 217, 0.08);
}
.device-meta {
  flex: 1;
  display: flex;
  flex-direction: column;
}
.device-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #2C2E33;
}
.device-detail {
  font-size: 22rpx;
  color: #A0A3AB;
  margin-top: 4rpx;
}
.device-chevron {
  display: flex;
  align-items: center;
}

/* ── Connect Grid · 轻量化图标卡片 ─────────────────────────────── */
.connect-grid {
  display: flex;
  gap: 20rpx;
}
.connect-card {
  flex: 1;
  background: #FFFFFF;
  border: 1rpx solid rgba(235, 235, 237, 0.8);
  border-radius: var(--radius-lg);
  padding: 36rpx 24rpx 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  /* Light card shadow for depth separation */
  box-shadow: var(--shadow-md);
  transition: transform 0.15s ease, box-shadow 0.15s ease;
}
.connect-card:active {
  transform: translateY(2rpx);
  box-shadow: var(--shadow-sm);
}
/* Icon container: remove heavy colored block, use soft tinted circle */
.connect-card-icon {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
}
.scan-icon {
  background: rgba(74, 144, 217, 0.06);
  /* No box-shadow on icon block */
}
.manual-icon {
  background: rgba(91, 127, 165, 0.06);
}
.connect-card-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #2C2E33;
  margin-bottom: 4rpx;
}
.connect-card-sub {
  font-size: 20rpx;
  color: #A0A3AB;
}

/* ── Quick Stats ─────────────────────────────────────────────────── */
.stats-row {
  background: #FFFFFF;
  border-radius: var(--radius-lg);
  border: 1rpx solid #EBEBED;
  padding: var(--spacing-lg);
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.stat-block {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}
.stat-num {
  font-size: 42rpx;
  font-weight: 700;
  color: #2C2E33;
  font-variant-numeric: tabular-nums;
  letter-spacing: -1rpx;
}
.stat-num.safe    { color: #3CB371; }
.stat-num.warning { color: #D4A24C; }
.stat-num.danger  { color: #C75450; }
.stat-label {
  font-size: 22rpx;
  color: #A0A3AB;
  margin-top: 6rpx;
}
.stat-sep {
  width: 1rpx;
  height: 56rpx;
  background: #EBEBED;
}

/* ── Health Tips ──────────────────────────────────────────────────── */
.tip-card {
  background: #FFFFFF;
  border-radius: var(--radius-lg);
  border: 1rpx solid #EBEBED;
  padding: 24rpx 28rpx;
  box-shadow: var(--shadow-md);
}
.tip-swiper {
  height: 150rpx;
}
.tip-slide {
  display: flex;
  flex-direction: column;
  padding-bottom: 32rpx;
}
.tip-tag {
  display: inline-block;
  font-size: 18rpx;
  color: #4A90D9;
  background: rgba(74, 144, 217, 0.08);
  padding: 4rpx 14rpx;
  border-radius: 6rpx;
  margin-bottom: 12rpx;
  align-self: flex-start;
}
.tip-body {
  font-size: 24rpx;
  color: #5A5D66;
  line-height: 1.7;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* ── Feature Banner · 卖点条 ─────────────────────────────────────── */
.feature-banner {
  margin-bottom: 40rpx;
  border-radius: var(--radius-lg);
  overflow: hidden;
  /* Subtle brand-tinted gradient background */
  background: linear-gradient(135deg, rgba(74,144,217,0.04) 0%, rgba(91,127,165,0.04) 100%);
  border: 1rpx solid rgba(74,144,217,0.12);
  padding: 32rpx 0;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: var(--shadow-sm);
}

.feature-badge {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 20rpx;
}

.feature-badge-sep {
  width: 1rpx;
  height: 56rpx;
  background: #EBEBED;
  flex-shrink: 0;
}

.badge-num {
  font-size: 40rpx;
  font-weight: 700;
  color: #4A90D9;
  line-height: 1.2;
}

.badge-text {
  font-size: 22rpx;
  color: #A0A3AB;
  margin-top: 6rpx;
}

/* ── Footer ──────────────────────────────────────────────────────── */
.page-footer {
  padding: 48rpx 0 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.footer-disclaimer {
  text-align: center;
  font-size: 20rpx;
  color: #C2C7CF;
  line-height: 1.6;
  max-width: 80%;
  margin-bottom: 10rpx;
}
.footer-ver {
  font-size: 18rpx;
  color: #D5D7DC;
  letter-spacing: 1rpx;
}

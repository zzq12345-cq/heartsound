/* Detection Page Styles - Entry Point (美化版) */

/* ============================================================================
   Page Container & Animated Background
   ============================================================================ */
.detection-page {
  min-height: 100vh;
  background: linear-gradient(180deg, #F0F7FF 0%, #F5F7FA 50%, #F5F7FA 100%);
  display: flex;
  flex-direction: column;
  position: relative;
  overflow: hidden;
}

/* Animated background circles */
.animated-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  overflow: hidden;
}

.bg-circle {
  position: absolute;
  border-radius: 50%;
  opacity: 0.08;
}

.bg-circle.c1 {
  width: 400rpx;
  height: 400rpx;
  background: linear-gradient(135deg, #1890FF, #40A9FF);
  top: -100rpx;
  right: -100rpx;
  animation: float-slow 8s ease-in-out infinite;
}

.bg-circle.c2 {
  width: 300rpx;
  height: 300rpx;
  background: linear-gradient(135deg, #52C41A, #73D13D);
  bottom: 200rpx;
  left: -80rpx;
  animation: float-slow 10s ease-in-out infinite reverse;
}

.bg-circle.c3 {
  width: 200rpx;
  height: 200rpx;
  background: linear-gradient(135deg, #722ED1, #B37FEB);
  bottom: 400rpx;
  right: 40rpx;
  animation: float-slow 6s ease-in-out infinite;
}

@keyframes float-slow {
  0%, 100% { transform: translateY(0) rotate(0deg); }
  50% { transform: translateY(-20rpx) rotate(5deg); }
}

/* ============================================================================
   Header Section with Wave
   ============================================================================ */
.header-section {
  position: relative;
  padding: 100rpx 32rpx 80rpx;
  overflow: hidden;
}

.header-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, #1890FF 0%, #096DD9 50%, #0050B3 100%);
}

.header-wave {
  position: absolute;
  bottom: -2rpx;
  left: 0;
  right: 0;
  height: 60rpx;
  overflow: hidden;
}

.wave-shape {
  position: absolute;
  bottom: 0;
  left: -10%;
  width: 120%;
  height: 100%;
  background: linear-gradient(180deg, #F0F7FF 0%, #F5F7FA 100%);
  border-radius: 100% 100% 0 0;
}

.header-content {
  position: relative;
  z-index: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.header-icon-wrapper {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
  backdrop-filter: blur(10rpx);
}

.header-title {
  display: block;
  font-size: 52rpx;
  font-weight: 700;
  color: #FFFFFF;
  margin-bottom: 12rpx;
  letter-spacing: 4rpx;
}

.header-subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.85);
  letter-spacing: 2rpx;
}

/* ============================================================================
   Main Content
   ============================================================================ */
.main-content {
  flex: 1;
  padding: 0 32rpx;
  position: relative;
  z-index: 10;
  margin-top: -20rpx;
}

/* ============================================================================
   Device Status Card
   ============================================================================ */
.status-card {
  display: flex;
  align-items: center;
  padding: 28rpx 24rpx;
  background: #FFFFFF;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  margin-bottom: 32rpx;
  position: relative;
  overflow: hidden;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.status-card.connected {
  border-color: rgba(76, 175, 80, 0.3);
}

.status-glow {
  position: absolute;
  top: -50%;
  right: -20%;
  width: 200rpx;
  height: 200rpx;
  background: radial-gradient(circle, rgba(76, 175, 80, 0.15) 0%, transparent 70%);
  pointer-events: none;
}

.status-icon-wrapper {
  position: relative;
  margin-right: 20rpx;
}

.status-icon-bg {
  width: 72rpx;
  height: 72rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.status-icon-bg.connected {
  background: linear-gradient(135deg, rgba(76, 175, 80, 0.15) 0%, rgba(76, 175, 80, 0.05) 100%);
}

.status-icon-bg.disconnected {
  background: linear-gradient(135deg, rgba(255, 152, 0, 0.15) 0%, rgba(255, 152, 0, 0.05) 100%);
}

.status-pulse {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 72rpx;
  height: 72rpx;
  border-radius: 20rpx;
  transform: translate(-50%, -50%);
  border: 2rpx solid rgba(76, 175, 80, 0.4);
  animation: status-pulse 2s ease-out infinite;
}

@keyframes status-pulse {
  0% { transform: translate(-50%, -50%) scale(1); opacity: 1; }
  100% { transform: translate(-50%, -50%) scale(1.5); opacity: 0; }
}

.status-info {
  flex: 1;
}

.status-row {
  display: flex;
  align-items: center;
  margin-bottom: 6rpx;
}

.status-text {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-right: 12rpx;
}

.status-badge {
  display: flex;
  align-items: center;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.status-badge.online {
  background: rgba(76, 175, 80, 0.1);
}

.status-badge.offline {
  background: rgba(189, 189, 189, 0.15);
}

.badge-dot {
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  margin-right: 6rpx;
}

.status-badge.online .badge-dot {
  background: #4CAF50;
  animation: dot-pulse 1.5s ease-in-out infinite;
}

.status-badge.offline .badge-dot {
  background: #BDBDBD;
}

@keyframes dot-pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.4; }
}

.badge-text {
  font-size: 20rpx;
  color: #999;
}

.status-badge.online .badge-text {
  color: #4CAF50;
}

.status-hint {
  font-size: 24rpx;
  color: #999;
}

.status-arrow {
  display: flex;
  align-items: center;
}

/* ============================================================================
   Start Detection Section
   ============================================================================ */
.start-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0 40rpx;
}

.start-btn-wrapper {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.outer-ring-container {
  position: absolute;
  width: 320rpx;
  height: 320rpx;
}

.outer-ring {
  position: absolute;
  top: 50%;
  left: 50%;
  border-radius: 50%;
  border: 3rpx solid;
  transform: translate(-50%, -50%);
  animation: ring-expand 3s ease-out infinite;
}

.outer-ring.r1 {
  width: 260rpx;
  height: 260rpx;
  border-color: rgba(24, 144, 255, 0.4);
  animation-delay: 0s;
}

.outer-ring.r2 {
  width: 300rpx;
  height: 300rpx;
  border-color: rgba(24, 144, 255, 0.25);
  animation-delay: 0.8s;
}

.outer-ring.r3 {
  width: 340rpx;
  height: 340rpx;
  border-color: rgba(24, 144, 255, 0.15);
  animation-delay: 1.6s;
}

@keyframes ring-expand {
  0% { transform: translate(-50%, -50%) scale(0.8); opacity: 1; }
  100% { transform: translate(-50%, -50%) scale(1.4); opacity: 0; }
}

.start-btn {
  width: 240rpx;
  height: 240rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  z-index: 2;
  transition: all 0.3s ease;
}

.start-btn.active {
  background: linear-gradient(135deg, #1890FF 0%, #096DD9 100%);
  box-shadow: 0 16rpx 48rpx rgba(24, 144, 255, 0.45);
}

.start-btn.active:active {
  transform: scale(0.95);
  box-shadow: 0 8rpx 24rpx rgba(24, 144, 255, 0.35);
}

.start-btn.disabled {
  background: linear-gradient(135deg, #E0E0E0 0%, #BDBDBD 100%);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.btn-inner {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.btn-icon-wrapper {
  margin-bottom: 8rpx;
}

.btn-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #FFFFFF;
}

/* Info Cards */
.info-cards {
  display: flex;
  justify-content: center;
  gap: 24rpx;
  margin-top: 40rpx;
  width: 100%;
}

.info-card {
  flex: 1;
  max-width: 180rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 16rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.info-text {
  font-size: 26rpx;
  font-weight: 600;
  color: #333;
  margin-top: 8rpx;
}

.info-label {
  font-size: 20rpx;
  color: #999;
  margin-top: 4rpx;
}

/* ============================================================================
   Tips Section
   ============================================================================ */
.tip-section {
  margin-bottom: 28rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
  padding: 0 8rpx;
}

.section-title-wrapper {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.section-more {
  display: flex;
  align-items: center;
  gap: 4rpx;
}

.section-more text {
  font-size: 26rpx;
  color: #1890FF;
}

.tip-swiper {
  height: 140rpx;
}

.tip-card {
  display: flex;
  align-items: flex-start;
  padding: 24rpx;
  background: linear-gradient(135deg, #FFFBEB 0%, #FFF8E1 100%);
  border-radius: 20rpx;
  border: 2rpx solid rgba(255, 152, 0, 0.2);
  height: 100%;
  box-sizing: border-box;
}

.tip-number {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #FF9800 0%, #FFA726 100%);
  color: #FFFFFF;
  font-size: 22rpx;
  font-weight: 700;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.tip-content {
  font-size: 26rpx;
  color: #8B6914;
  line-height: 1.7;
  flex: 1;
}

.tip-indicators {
  display: flex;
  justify-content: center;
  gap: 12rpx;
  margin-top: 16rpx;
}

.tip-dot {
  width: 12rpx;
  height: 12rpx;
  background: #E0E0E0;
  border-radius: 50%;
  transition: all 0.3s ease;
}

.tip-dot.active {
  width: 28rpx;
  border-radius: 6rpx;
  background: linear-gradient(90deg, #FF9800, #FFA726);
}

/* ============================================================================
   Records Section
   ============================================================================ */
.records-section {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 24rpx;
  margin-bottom: 28rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.records-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.record-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #F8FAFC;
  border-radius: 16rpx;
  transition: all 0.2s ease;
}

.record-item-hover {
  background: #F0F5FF;
  transform: scale(0.99);
}

.record-icon-wrapper {
  width: 56rpx;
  height: 56rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
}

.record-icon-wrapper.safe {
  background: linear-gradient(135deg, rgba(76, 175, 80, 0.15) 0%, rgba(76, 175, 80, 0.05) 100%);
}

.record-icon-wrapper.warning {
  background: linear-gradient(135deg, rgba(255, 152, 0, 0.15) 0%, rgba(255, 152, 0, 0.05) 100%);
}

.record-icon-wrapper.danger {
  background: linear-gradient(135deg, rgba(244, 67, 54, 0.15) 0%, rgba(244, 67, 54, 0.05) 100%);
}

.record-info {
  flex: 1;
}

.record-label {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 4rpx;
}

.record-time {
  font-size: 22rpx;
  color: #999;
}

.record-result {
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
  margin-right: 12rpx;
}

.record-result text {
  font-size: 22rpx;
  font-weight: 500;
}

.record-result.safe {
  background: rgba(76, 175, 80, 0.1);
}

.record-result.safe text {
  color: #4CAF50;
}

.record-result.warning {
  background: rgba(255, 152, 0, 0.1);
}

.record-result.warning text {
  color: #FF9800;
}

.record-result.danger {
  background: rgba(244, 67, 54, 0.1);
}

.record-result.danger text {
  color: #F44336;
}

.record-arrow {
  display: flex;
  align-items: center;
}

/* ============================================================================
   Empty State
   ============================================================================ */
.empty-records {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 32rpx;
  background: #FFFFFF;
  border-radius: 24rpx;
  margin-bottom: 28rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.empty-icon {
  margin-bottom: 20rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.empty-hint {
  font-size: 24rpx;
  color: #999;
}

/* ============================================================================
   Disclaimer
   ============================================================================ */
.disclaimer {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  text-align: center;
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
}

.disclaimer text {
  font-size: 22rpx;
  color: #BDBDBD;
}

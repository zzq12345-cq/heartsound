/* Index Page Styles - 首页样式 (美化版) */

/* ============================================================================
   Page Container - 页面容器
   ============================================================================ */
.page-container {
  padding: 0 32rpx 32rpx;
  padding-bottom: calc(48rpx + 120rpx);
  min-height: 100vh;
  box-sizing: border-box;
  background: linear-gradient(180deg, #E8F4FD 0%, #F5F7FA 30%, #F5F7FA 100%);
}

.section {
  margin-bottom: 28rpx;
}

/* ============================================================================
   Section Title - 区块标题
   ============================================================================ */
.section-title {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
  padding: 0 8rpx;
}

.section-title-text {
  font-size: 30rpx;
  font-weight: 600;
  color: #333333;
}

.section-subtitle {
  font-size: 24rpx;
  color: #999999;
}

/* Status Badge */
.status-badge {
  display: flex;
  align-items: center;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  background-color: rgba(189, 189, 189, 0.15);
}

.status-badge.connected {
  background-color: rgba(76, 175, 80, 0.15);
}

.status-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background-color: #BDBDBD;
  margin-right: 8rpx;
}

.status-badge.connected .status-dot {
  background-color: #4CAF50;
  animation: pulse-dot 2s ease-in-out infinite;
}

@keyframes pulse-dot {
  0%, 100% { opacity: 1; transform: scale(1); }
  50% { opacity: 0.6; transform: scale(1.2); }
}

.status-badge-text {
  font-size: 22rpx;
  color: #999999;
}

.status-badge.connected .status-badge-text {
  color: #4CAF50;
}

/* Tip Icon Badge */
.tip-icon-badge {
  display: flex;
  align-items: center;
  justify-content: center;
}

/* ============================================================================
   Header Welcome Section - 顶部欢迎区
   ============================================================================ */
.header-section {
  padding: 48rpx 0 32rpx;
}

.welcome-area {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.welcome-text {
  display: flex;
  flex-direction: column;
}

.greeting {
  font-size: 44rpx;
  font-weight: 700;
  color: #1A1A1A;
  margin-bottom: 8rpx;
}

.welcome-subtitle {
  font-size: 28rpx;
  color: #666666;
}

.header-icon-wrapper {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, rgba(24, 144, 255, 0.15) 0%, rgba(24, 144, 255, 0.05) 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  animation: float 3s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-8rpx); }
}

/* ============================================================================
   Device Status Card - 设备状态卡片
   ============================================================================ */
.device-card {
  background-color: #FFFFFF;
  border-radius: 24rpx;
  padding: 28rpx 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.device-card.connected {
  border-color: rgba(76, 175, 80, 0.3);
  background: linear-gradient(135deg, #FFFFFF 0%, rgba(76, 175, 80, 0.03) 100%);
}

.card-content {
  display: flex;
  align-items: center;
}

.device-icon-wrapper {
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
  background-color: #F5F7FA;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  transition: all 0.3s ease;
}

.device-icon-wrapper.connected {
  background: linear-gradient(135deg, rgba(76, 175, 80, 0.15) 0%, rgba(76, 175, 80, 0.05) 100%);
}

.device-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.device-status-text {
  font-size: 30rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 6rpx;
}

.device-status-hint {
  font-size: 24rpx;
  color: #999999;
}

.device-arrow {
  display: flex;
  align-items: center;
  justify-content: center;
}

/* ============================================================================
   Connection Buttons - 连接按钮
   ============================================================================ */
.connection-buttons {
  background-color: #FFFFFF;
  border-radius: 24rpx;
  padding: 32rpx 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.btn-row {
  display: flex;
  justify-content: space-around;
}

.connect-btn-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  border-radius: 20rpx;
  flex: 1;
  max-width: 280rpx;
  transition: all 0.2s ease;
}

.connect-btn-item:active {
  background-color: rgba(24, 144, 255, 0.04);
  transform: scale(0.97);
}

/* Icon outer glow */
.connect-icon-outer {
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
}

.scan-outer {
  background: radial-gradient(circle, rgba(24, 144, 255, 0.12) 0%, transparent 70%);
}

.input-outer {
  background: radial-gradient(circle, rgba(82, 196, 26, 0.12) 0%, transparent 70%);
}

.connect-icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: transform 0.3s ease;
}

.connect-btn-item:active .connect-icon {
  transform: scale(0.95);
}

.scan-bg {
  background: linear-gradient(135deg, #1890FF 0%, #40A9FF 100%);
  box-shadow: 0 8rpx 28rpx rgba(24, 144, 255, 0.4);
}

.input-bg {
  background: linear-gradient(135deg, #52C41A 0%, #73D13D 100%);
  box-shadow: 0 8rpx 28rpx rgba(82, 196, 26, 0.4);
}

.connect-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 6rpx;
}

.connect-desc {
  font-size: 22rpx;
  color: #999999;
}

.dev-mode-hint {
  font-size: 18rpx;
  color: #FF9800;
  margin-top: 12rpx;
  padding: 4rpx 12rpx;
  background: rgba(255, 152, 0, 0.1);
  border-radius: 6rpx;
}

/* ============================================================================
   Start Detection Button - 开始检测按钮
   ============================================================================ */
.start-detection-btn {
  display: flex;
  align-items: center;
  padding: 24rpx 28rpx;
  border-radius: 24rpx;
  transition: all 0.3s ease;
}

.start-detection-btn.disabled {
  background-color: #FFFFFF;
  border: 2rpx dashed #E0E0E0;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.start-detection-btn.active {
  background: linear-gradient(135deg, #1890FF 0%, #096DD9 100%);
  border: none;
  box-shadow: 0 8rpx 32rpx rgba(24, 144, 255, 0.45);
}

.start-detection-btn.active:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(24, 144, 255, 0.35);
}

.start-btn-icon-wrapper {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.start-detection-btn.disabled .start-btn-icon-wrapper {
  background-color: #F5F7FA;
}

.start-detection-btn.active .start-btn-icon-wrapper {
  background: rgba(255, 255, 255, 0.2);
}

.start-btn-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.start-btn-text {
  font-size: 32rpx;
  font-weight: 600;
}

.start-detection-btn.disabled .start-btn-text {
  color: #BDBDBD;
}

.start-detection-btn.active .start-btn-text {
  color: #FFFFFF;
}

.start-btn-hint {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-top: 4rpx;
}

.start-btn-arrow {
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0.9;
}

/* ============================================================================
   Quick Stats Card - 快速统计卡片
   ============================================================================ */
.quick-stats-card {
  background-color: #FFFFFF;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.stat-value {
  font-size: 40rpx;
  font-weight: 700;
  color: #333333;
  margin-bottom: 8rpx;
}

.stat-value.safe {
  color: #4CAF50;
}

.stat-value.warning {
  color: #FF9800;
}

.stat-value.danger {
  color: #F44336;
}

.stat-label {
  font-size: 24rpx;
  color: #999999;
}

.stat-divider {
  width: 2rpx;
  height: 60rpx;
  background: linear-gradient(180deg, transparent, #E0E0E0, transparent);
}

/* ============================================================================
   Health Tips Card - 健康小贴士卡片
   ============================================================================ */
.health-tip-card {
  background-color: #FFFFFF;
  border-radius: 24rpx;
  padding: 24rpx 28rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.tip-swiper {
  height: 160rpx;
}

.tip-content-wrapper {
  display: flex;
  flex-direction: column;
  height: 100%;
  padding-bottom: 32rpx;
}

.tip-category-wrapper {
  margin-bottom: 12rpx;
}

.tip-category {
  display: inline;
  font-size: 20rpx;
  color: #4CAF50;
  background: linear-gradient(135deg, rgba(76, 175, 80, 0.15) 0%, rgba(76, 175, 80, 0.08) 100%);
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
}

.tip-text {
  font-size: 26rpx;
  color: #666666;
  line-height: 1.7;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* ============================================================================
   Footer - 页脚
   ============================================================================ */
.footer {
  margin-top: 32rpx;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.footer-divider {
  width: 120rpx;
  height: 4rpx;
  background: linear-gradient(90deg, transparent, #E0E0E0, transparent);
  margin-bottom: 24rpx;
  border-radius: 2rpx;
}

.disclaimer {
  text-align: center;
  font-size: 22rpx;
  color: #BDBDBD;
  line-height: 1.6;
  margin-bottom: 16rpx;
}

.version-text {
  font-size: 20rpx;
  color: #D0D0D0;
}

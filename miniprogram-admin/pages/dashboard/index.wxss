/**
 * Dashboard Page Styles
 * 数据看板页面样式 - 现代医疗风格重构
 */

.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #F0F7FF 0%, #F8FAFB 120rpx, #F8FAFB 100%);
}

.page-content {
  padding: 32rpx;
  padding-bottom: calc(140rpx + env(safe-area-inset-bottom));
}

/* ========== 欢迎区域 - 融入式设计 ========== */
.welcome-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
  padding: 0 8rpx;
}

.welcome-text {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.welcome-hello {
  font-size: 28rpx;
  color: #7F8C9A;
  font-weight: 400;
}

.welcome-name {
  font-size: 40rpx;
  font-weight: 700;
  color: #2C3E50;
  letter-spacing: 1rpx;
}

.welcome-date {
  font-size: 24rpx;
  color: #A8B5C2;
  background: rgba(74, 144, 226, 0.08);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

/* ========== 统计卡片网格 - Soft UI风格 ========== */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  margin-bottom: 32rpx;
}

/* ========== 图表区域 - 增加间距和呼吸感 ========== */
.chart-section {
  margin-bottom: 32rpx;
}

/* ========== 底部间距 ========== */
.bottom-spacer {
  height: 32rpx;
}

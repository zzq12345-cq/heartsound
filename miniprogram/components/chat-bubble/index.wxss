/* Chat Bubble Component Styles */

.bubble-container {
  display: flex;
  align-items: flex-start;
  margin-bottom: 24rpx;
  padding: 0 20rpx;
}

/* Right aligned (user) */
.bubble-right {
  flex-direction: row-reverse;
}

/* Left aligned (AI) */
.bubble-left {
  flex-direction: row;
}

/* Avatar Wrapper */
.avatar-wrapper {
  flex-shrink: 0;
}

.avatar {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.ai-avatar {
  background: linear-gradient(135deg, #E3F2FD 0%, #BBDEFB 100%);
}

.user-avatar {
  background: linear-gradient(135deg, #1890FF 0%, #096DD9 100%);
}

/* Bubble Wrapper */
.bubble-wrapper {
  max-width: 70%;
  margin: 0 16rpx;
}

/* Bubble Base */
.bubble {
  padding: 20rpx 28rpx;
  border-radius: 20rpx;
  word-wrap: break-word;
  word-break: break-all;
}

/* User Bubble */
.bubble-user {
  background: linear-gradient(135deg, #1890FF 0%, #096DD9 100%);
  border-bottom-right-radius: 4rpx;
}

.bubble-user .bubble-text {
  color: #FFFFFF;
  font-size: 28rpx;
  line-height: 1.6;
}

/* AI Bubble */
.bubble-ai {
  background: #FFFFFF;
  border: 1rpx solid rgba(0, 0, 0, 0.06);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  border-bottom-left-radius: 4rpx;
}

.bubble-ai .bubble-text {
  color: #333333;
  font-size: 28rpx;
  line-height: 1.6;
}

/* Loading Dots Animation */
.loading-dots {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 8rpx 0;
}

.dot {
  width: 12rpx;
  height: 12rpx;
  background-color: #999999;
  border-radius: 50%;
  margin: 0 6rpx;
  animation: typing-dot 1.4s infinite ease-in-out both;
}

.dot:nth-child(1) {
  animation-delay: -0.32s;
}

.dot:nth-child(2) {
  animation-delay: -0.16s;
}

.dot:nth-child(3) {
  animation-delay: 0s;
}

@keyframes typing-dot {
  0%, 80%, 100% {
    transform: scale(0.6);
    opacity: 0.5;
  }
  40% {
    transform: scale(1);
    opacity: 1;
  }
}

/* Disclaimer */
.disclaimer {
  margin-top: 8rpx;
  padding-left: 4rpx;
}

.disclaimer-text {
  font-size: 20rpx;
  color: #999999;
}

/* Timestamp */
.timestamp {
  margin-top: 8rpx;
  padding-left: 4rpx;
}

.timestamp-text {
  font-size: 20rpx;
  color: #BBBBBB;
}

/* Bubble right timestamp alignment */
.bubble-right .timestamp {
  text-align: right;
  padding-right: 4rpx;
  padding-left: 0;
}

/* ========== 思考过程内嵌样式 ========== */

/* 思考区块 - 内嵌在气泡内，淡蓝灰色系 */
.thinking-block {
  margin-bottom: 16rpx;
  padding: 12rpx 16rpx;
  background: linear-gradient(135deg, #F5F9FC 0%, #EDF4F9 100%);
  border-radius: 12rpx;
  border-left: 3rpx solid #91D5FF;
}

.thinking-block-header {
  display: flex;
  align-items: center;
}

.thinking-block-label {
  flex: 1;
  font-size: 22rpx;
  color: #8C8C8C;
  margin-left: 8rpx;
}

.thinking-block-content {
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.3s ease-out, margin-top 0.3s ease-out;
}

.thinking-block-content.show {
  max-height: 400rpx;
  overflow-y: auto;
  margin-top: 10rpx;
  padding-top: 10rpx;
  border-top: 1rpx dashed #D9D9D9;
}

.thinking-block-text {
  font-size: 22rpx;
  color: #8C8C8C;
  line-height: 1.5;
  white-space: pre-wrap;
}

/* 思考完成后折叠状态 */
.thinking-block:not(.expanded) .thinking-block-content:not(.show) {
  max-height: 0;
}

/* 思考中等待状态 */
.thinking-waiting {
  display: flex;
  align-items: center;
  padding: 8rpx 0;
}

.thinking-waiting-text {
  font-size: 24rpx;
  color: #8C8C8C;
  margin-left: 8rpx;
  margin-right: 8rpx;
}

.thinking-dots-inline {
  display: flex;
  align-items: center;
}

.thinking-dots-inline .dot {
  width: 8rpx;
  height: 8rpx;
  background-color: #BFBFBF;
  border-radius: 50%;
  margin: 0 3rpx;
  animation: thinking-dot 1.4s infinite ease-in-out both;
}

.thinking-dots-inline .dot:nth-child(1) {
  animation-delay: -0.32s;
}

.thinking-dots-inline .dot:nth-child(2) {
  animation-delay: -0.16s;
}

.thinking-dots-inline .dot:nth-child(3) {
  animation-delay: 0s;
}

@keyframes thinking-dot {
  0%, 80%, 100% {
    transform: scale(0.6);
    opacity: 0.5;
  }
  40% {
    transform: scale(1);
    opacity: 1;
  }
}

/* 回答分隔线 */
.answer-divider {
  height: 1rpx;
  background: linear-gradient(90deg, transparent, #E8E8E8, transparent);
  margin: 12rpx 0;
}

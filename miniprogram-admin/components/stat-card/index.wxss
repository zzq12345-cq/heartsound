/* 数值 */
.stat-value {
  font-size: 48rpx;
  font-weight: 700;
  color: #333333;
  margin-bottom: 8rpx;
}

/* 底部 */
.stat-footer {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.stat-trend {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  font-weight: 500;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.trend-icon {
  margin-right: 4rpx;
}

.trend-up {
  background-color: rgba(82, 196, 26, 0.1);
  color: #52C41A;
}

.trend-down {
  background-color: rgba(255, 77, 79, 0.1);
  color: #FF4D4F;
}

.trend-flat {
  background-color: rgba(153, 153, 153, 0.1);
  color: #999999;
}

.stat-subtitle {
  font-size: 24rpx;
  color: #999999;
}

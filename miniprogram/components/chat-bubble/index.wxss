/* Chat Bubble Component Styles */

.bubble-container {
  display: flex;
  align-items: flex-start;
  margin-bottom: 24rpx;
  padding: 0 20rpx;
}

/* Right aligned (user) */
.bubble-right {
  flex-direction: row-reverse;
}

/* Left aligned (AI) */
.bubble-left {
  flex-direction: row;
}

/* Avatar Wrapper */
.avatar-wrapper {
  flex-shrink: 0;
}

.avatar {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.ai-avatar {
  background: linear-gradient(135deg, #E3F2FD 0%, #BBDEFB 100%);
}

.user-avatar {
  background: linear-gradient(135deg, #1890FF 0%, #096DD9 100%);
}

/* Bubble Wrapper */
.bubble-wrapper {
  max-width: 70%;
  margin: 0 16rpx;
}

/* Bubble Base */
.bubble {
  padding: 20rpx 28rpx;
  border-radius: 20rpx;
  word-wrap: break-word;
  word-break: break-all;
}

/* User Bubble */
.bubble-user {
  background: linear-gradient(135deg, #1890FF 0%, #096DD9 100%);
  border-bottom-right-radius: 4rpx;
}

.bubble-user .bubble-text {
  color: #FFFFFF;
  font-size: 28rpx;
  line-height: 1.6;
}

/* AI Bubble */
.bubble-ai {
  background: #F5F5F5;
  border-bottom-left-radius: 4rpx;
}

.bubble-ai .bubble-text {
  color: #333333;
  font-size: 28rpx;
  line-height: 1.6;
}

/* Loading Dots Animation */
.loading-dots {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 8rpx 0;
}

.dot {
  width: 12rpx;
  height: 12rpx;
  background-color: #999999;
  border-radius: 50%;
  margin: 0 6rpx;
  animation: typing-dot 1.4s infinite ease-in-out both;
}

.dot:nth-child(1) {
  animation-delay: -0.32s;
}

.dot:nth-child(2) {
  animation-delay: -0.16s;
}

.dot:nth-child(3) {
  animation-delay: 0s;
}

@keyframes typing-dot {
  0%, 80%, 100% {
    transform: scale(0.6);
    opacity: 0.5;
  }
  40% {
    transform: scale(1);
    opacity: 1;
  }
}

/* Disclaimer */
.disclaimer {
  margin-top: 8rpx;
  padding-left: 4rpx;
}

.disclaimer-text {
  font-size: 20rpx;
  color: #999999;
}

/* Timestamp */
.timestamp {
  margin-top: 8rpx;
  padding-left: 4rpx;
}

.timestamp-text {
  font-size: 20rpx;
  color: #BBBBBB;
}

/* Bubble right timestamp alignment */
.bubble-right .timestamp {
  text-align: right;
  padding-right: 4rpx;
  padding-left: 0;
}

/* AI Health Assistant Chat Page Styles */
/* 设计语言：静谧医疗感 · 青蓝色点缀 · 雾面质感 */

/* ==================== Drawer Overlay ==================== */
.drawer-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0);
  z-index: 998;
  pointer-events: none;
  transition: background 0.3s ease;
}

.drawer-overlay.visible {
  background: rgba(0, 0, 0, 0.4);
  pointer-events: auto;
}

/* ==================== History Drawer ==================== */
.history-drawer {
  position: fixed;
  top: 0;
  left: 0;
  width: 580rpx;
  height: 100%;
  background: #FFFFFF;
  z-index: 999;
  transform: translateX(-100%);
  transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  display: flex;
  flex-direction: column;
  border-right: 1rpx solid #EBEBED;
}

.history-drawer.open {
  transform: translateX(0);
}

/* Drawer Header */
.drawer-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 88rpx 28rpx 24rpx;
  border-bottom: 1rpx solid #EBEBED;
}

.drawer-title {
  font-size: 34rpx;
  font-weight: 700;
  color: #2C2E33;
}

.drawer-close {
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
}

.drawer-close:active {
  background: #F4F5F7;
}

/* New Chat Button */
.new-chat-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  margin: 24rpx 28rpx;
  height: 84rpx;
  background: #4A90D9;
  border-radius: var(--radius-md);
}

.new-chat-btn:active {
  background: #3A7BD5;
}

.new-chat-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #FFFFFF;
}

/* Conversation List */
.conversation-list {
  flex: 1;
  padding: 8rpx 0;
}

.conversation-item {
  display: flex;
  align-items: center;
  padding: 24rpx 28rpx;
  margin: 0 12rpx;
  border-radius: 12rpx;
  transition: background 0.2s;
}

.conversation-item:active {
  background: #F4F5F7;
}

.conversation-item.active {
  background: rgba(74, 144, 217, 0.08);
}

.conv-content {
  flex: 1;
  overflow: hidden;
}

.conv-name {
  display: block;
  font-size: 28rpx;
  color: #2C2E33;
  font-weight: 500;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.conversation-item.active .conv-name {
  color: #4A90D9;
}

.conv-time {
  display: block;
  font-size: 22rpx;
  color: #A0A3AB;
  margin-top: 6rpx;
}

.conv-delete {
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  border-radius: 50%;
  opacity: 0.6;
}

.conv-delete:active {
  background: rgba(199, 84, 80, 0.08);
  opacity: 1;
}

/* History Loading & Empty */
.history-loading,
.history-empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
}

.history-loading-text,
.history-empty-text {
  font-size: 26rpx;
  color: #A0A3AB;
  margin-top: 16rpx;
}

/* ==================== Chat Container ==================== */
.chat-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #F4F5F7;
}

/* Header */
.chat-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 24rpx;
  background: #FFFFFF;
  border-bottom: 1rpx solid #EBEBED;
}

.header-left,
.header-right {
  width: 72rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
}

.header-left:active,
.header-right:active {
  background: #F4F5F7;
}

.header-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #2C2E33;
}

/* Messages Container */
.messages-container {
  flex: 1;
  padding: 20rpx 0;
  overflow-y: auto;
}

/* Disclaimer Banner */
.disclaimer-banner {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin: 0 30rpx 20rpx;
  padding: 16rpx 20rpx;
  background: #FBF6EC;
  border-radius: var(--radius-md);
  border: 1rpx solid #E8D5A0;
}

.disclaimer-banner .disclaimer-text {
  flex: 1;
  font-size: 22rpx;
  color: #C48A30;
  line-height: 1.4;
}

/* Messages List */
.messages-list {
  padding: 0 10rpx;
}

.message-item {
  margin-bottom: 8rpx;
}

/* Quick Questions */
.quick-questions {
  margin: 30rpx;
  padding: 28rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
  border: 1rpx solid #EBEBED;
}

.quick-title {
  font-size: 26rpx;
  color: #A0A3AB;
  margin-bottom: 20rpx;
}

.quick-list {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-sm);
}

.quick-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 24rpx;
  background: #F4F5F7;
  border-radius: 12rpx;
  transition: background 0.2s;
}

.quick-item:active {
  background: #EBEBED;
}

.quick-text {
  font-size: 28rpx;
  color: #2C2E33;
}

/* Bottom Spacing */
.bottom-spacing {
  height: 20rpx;
}

/* Input Container */
.input-container {
  padding: 16rpx 20rpx;
  padding-bottom: calc(16rpx + env(safe-area-inset-bottom));
  background: #FFFFFF;
  border-top: 1rpx solid #EBEBED;
}

.input-wrapper {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
  padding: 12rpx 16rpx;
  background: #F4F5F7;
  border-radius: var(--radius-full);
}

.message-input {
  flex: 1;
  height: 64rpx;
  font-size: 28rpx;
  color: #2C2E33;
  padding: 0 16rpx;
}

.message-input::placeholder {
  color: #A0A3AB;
}

.send-btn {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #EBEBED;
  border-radius: 50%;
  transition: background 0.2s;
}

.send-btn.active {
  background: #4A90D9;
}

.send-btn:active {
  opacity: 0.8;
}

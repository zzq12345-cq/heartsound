/* =====================================================================
   Knowledge List Page · 健康科普列表页样式
   Design: 复用首页静谧医疗感设计语言
   ===================================================================== */

/* ── Page Shell ─────────────────────────────────────────────────────── */
.page-container {
  min-height: 100vh;
  padding: 0 36rpx calc(60rpx + 120rpx);
  background: #F4F5F7;
  overflow: hidden;
}

/* ── Hero ──────────────────────────────────────────────────────────── */
.hero {
  position: relative;
  padding: 60rpx 40rpx 48rpx;
  margin: 0 -36rpx;
  overflow: hidden;
  background: linear-gradient(180deg, #FFFFFF 0%, #F7F8FA 100%);
  border-bottom: 1rpx solid #EBEBED;
}
.hero::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: linear-gradient(90deg, #4A90D9, #7EB8DA, #B8D4EE);
  z-index: 3;
}

.hero-deco {
  position: absolute;
  border-radius: 50%;
  pointer-events: none;
}
.hero-deco--circle1 {
  width: 320rpx;
  height: 320rpx;
  left: -100rpx;
  bottom: -120rpx;
  background: radial-gradient(circle, rgba(74,144,217,0.04) 0%, transparent 70%);
}
.hero-deco--circle2 {
  width: 200rpx;
  height: 200rpx;
  right: 60rpx;
  top: -60rpx;
  background: radial-gradient(circle, rgba(74,144,217,0.03) 0%, transparent 70%);
}
.hero-deco--wave {
  width: 500rpx;
  height: 500rpx;
  right: -200rpx;
  bottom: -280rpx;
  border-radius: 50%;
  border: 2rpx solid rgba(74,144,217,0.04);
  background: transparent;
}

.hero-content {
  position: relative;
  z-index: 2;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.hero-text {
  display: flex;
  flex-direction: column;
}
.hero-greeting {
  font-size: 48rpx;
  font-weight: 700;
  color: #2C2E33;
  letter-spacing: -0.5rpx;
  line-height: 1.15;
}
.hero-tagline {
  margin-top: 10rpx;
  font-size: 26rpx;
  color: #A0A3AB;
  font-weight: 400;
  letter-spacing: 1.5rpx;
}

.hero-icon-wrap {
  width: 96rpx;
  height: 96rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(74, 144, 217, 0.06);
  border-radius: 50%;
}

/* ── Section Shared ────────────────────────────────────────────────── */
.card-section {
  margin-bottom: 40rpx;
}

.card-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 18rpx;
  padding: 0 4rpx;
}
.card-header-label {
  font-size: 26rpx;
  font-weight: 600;
  color: #3C3E44;
  letter-spacing: 0.5rpx;
}
.card-header-sub {
  font-size: 22rpx;
  color: #A0A3AB;
}

/* ── Featured Swiper ───────────────────────────────────────────────── */
.featured-swiper {
  height: 260rpx;
}

.featured-card {
  background: #FFFFFF;
  border-radius: 24rpx;
  border: 1rpx solid #EBEBED;
  padding: 32rpx;
  height: 100%;
  box-sizing: border-box;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
  display: flex;
  flex-direction: column;
}

.featured-card-content {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.featured-tag {
  display: inline-block;
  font-size: 18rpx;
  color: #FFFFFF;
  background: linear-gradient(135deg, #4A90D9, #3A7BD5);
  padding: 4rpx 16rpx;
  border-radius: 6rpx;
  align-self: flex-start;
  margin-bottom: 12rpx;
}

.featured-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2C2E33;
  line-height: 1.3;
  margin-bottom: 8rpx;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.featured-summary {
  font-size: 24rpx;
  color: #5A5D66;
  line-height: 1.6;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  flex: 1;
}

.featured-meta {
  display: flex;
  align-items: center;
  margin-top: 12rpx;
}
.featured-meta-item {
  font-size: 20rpx;
  color: #A0A3AB;
}
.featured-meta-sep {
  font-size: 20rpx;
  color: #DCDEE3;
  margin: 0 8rpx;
}

/* ── Category Tabs ─────────────────────────────────────────────────── */
.category-section {
  margin-bottom: 32rpx;
}

.category-scroll {
  width: 100%;
  white-space: nowrap;
}

.category-tabs {
  display: inline-flex;
  gap: 16rpx;
  padding: 4rpx 0;
}

.category-tab {
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  padding: 14rpx 24rpx;
  border-radius: 100rpx;
  background: #FFFFFF;
  border: 1rpx solid #EBEBED;
  flex-shrink: 0;
  transition: all 0.2s ease;
}
.category-tab.active {
  background: linear-gradient(135deg, #4A90D9, #3A7BD5);
  border-color: transparent;
  box-shadow: 0 4rpx 16rpx rgba(74, 144, 217, 0.25);
}

.category-tab-text {
  font-size: 24rpx;
  font-weight: 500;
  color: #5A5D66;
}
.category-tab.active .category-tab-text {
  color: #FFFFFF;
}

.category-tab-count {
  font-size: 20rpx;
  color: #A0A3AB;
  background: rgba(0, 0, 0, 0.04);
  padding: 2rpx 10rpx;
  border-radius: 100rpx;
}
.category-tab.active .category-tab-count {
  color: rgba(255, 255, 255, 0.8);
  background: rgba(255, 255, 255, 0.2);
}

/* ── Article List ──────────────────────────────────────────────────── */
.article-list {
  min-height: 300rpx;
}

.article-card {
  background: #FFFFFF;
  border-radius: 24rpx;
  border: 1rpx solid #EBEBED;
  padding: 28rpx 32rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
  transition: transform 0.15s ease, box-shadow 0.15s ease;
}
.article-card:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.article-card-body {
  flex: 1;
  min-width: 0;
}

.article-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #2C2E33;
  line-height: 1.4;
  margin-bottom: 8rpx;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.article-summary {
  font-size: 24rpx;
  color: #5A5D66;
  line-height: 1.6;
  margin-bottom: 12rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.article-meta {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.article-meta-left {
  display: flex;
  align-items: center;
}

.article-read-time,
.article-views {
  font-size: 20rpx;
  color: #A0A3AB;
}
.article-meta-sep {
  font-size: 20rpx;
  color: #DCDEE3;
  margin: 0 8rpx;
}

.article-tags {
  display: flex;
  gap: 8rpx;
}

.article-tag {
  font-size: 18rpx;
  color: #4A90D9;
  background: rgba(74, 144, 217, 0.08);
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
}

.article-card-arrow {
  margin-left: 16rpx;
  flex-shrink: 0;
}

/* ── Skeleton Loading ──────────────────────────────────────────────── */
.skeleton-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.skeleton-card {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 28rpx 32rpx;
  border: 1rpx solid #EBEBED;
}

.skeleton-line {
  background: linear-gradient(90deg, #F0F0F0 25%, #E0E0E0 50%, #F0F0F0 75%);
  background-size: 200% 100%;
  animation: skeleton-shimmer 1.5s infinite;
  border-radius: 8rpx;
}

.skeleton-title {
  width: 60%;
  height: 32rpx;
  margin-bottom: 16rpx;
}

.skeleton-summary {
  width: 90%;
  height: 24rpx;
  margin-bottom: 12rpx;
}

.skeleton-meta {
  width: 40%;
  height: 20rpx;
}

@keyframes skeleton-shimmer {
  0%   { background-position: 200% 0; }
  100% { background-position: -200% 0; }
}

/* ── Empty State ───────────────────────────────────────────────────── */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 0;
}

.empty-text {
  font-size: 26rpx;
  color: #A0A3AB;
  margin-top: 20rpx;
}

/* ── Loading More ──────────────────────────────────────────────────── */
.loading-more,
.no-more {
  padding: 32rpx 0;
  text-align: center;
}

.loading-more-text {
  font-size: 24rpx;
  color: #A0A3AB;
}

.no-more-text {
  font-size: 22rpx;
  color: #C2C7CF;
}

/* ── Footer ────────────────────────────────────────────────────────── */
.page-footer {
  padding: 48rpx 0 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.footer-disclaimer {
  text-align: center;
  font-size: 20rpx;
  color: #C2C7CF;
  line-height: 1.6;
  max-width: 80%;
  margin-bottom: 10rpx;
}
.footer-ver {
  font-size: 18rpx;
  color: #D5D7DC;
  letter-spacing: 1rpx;
}

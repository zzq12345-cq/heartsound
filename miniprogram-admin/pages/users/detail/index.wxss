/* User Detail Page Styles */

.page {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 40rpx;
}

/* 加载状态 */
.loading-wrap {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f0f0f0;
  border-top-color: #1890FF;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

.loading-spinner.small {
  width: 36rpx;
  height: 36rpx;
  border-width: 3rpx;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #999;
}

/* 用户头部 */
.user-header {
  display: flex;
  align-items: center;
  padding: 32rpx 24rpx;
  background: #fff;
}

.avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  background: #f0f0f0;
  flex-shrink: 0;
}

.user-info {
  flex: 1;
  margin-left: 24rpx;
  display: flex;
  flex-direction: column;
}

.nickname {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.phone {
  margin-top: 8rpx;
  font-size: 28rpx;
  color: #666;
}

.register-time {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #999;
}

/* 通用section */
.section-title {
  padding: 24rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  background: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}

/* 统计卡片 */
.stats-section {
  margin-top: 16rpx;
  background: #fff;
}

.stats-grid {
  display: flex;
  flex-wrap: wrap;
  padding: 16rpx;
}

.stat-item {
  width: 33.33%;
  padding: 20rpx 0;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-item .stat-value {
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
}

.stat-item.safe .stat-value {
  color: #4CAF50;
}

.stat-item.warning .stat-value {
  color: #FF9800;
}

.stat-item.danger .stat-value {
  color: #F44336;
}

.stat-item .stat-label {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #999;
}

/* 绑定设备 */
.devices-section {
  margin-top: 16rpx;
  background: #fff;
}

.empty-devices {
  padding: 40rpx;
  text-align: center;
  font-size: 28rpx;
  color: #999;
}

.devices-list {
  padding: 0 24rpx;
}

.device-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.device-item:last-child {
  border-bottom: none;
}

.device-icon {
  width: 40rpx;
  height: 40rpx;
}

.device-info {
  flex: 1;
  margin-left: 16rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.device-id {
  font-size: 28rpx;
  color: #333;
}

.primary-badge {
  padding: 4rpx 12rpx;
  font-size: 20rpx;
  color: #1890FF;
  background: #e6f7ff;
  border-radius: 8rpx;
}

/* 检测记录 */
.records-section {
  margin-top: 16rpx;
  background: #fff;
}

.empty-records {
  padding: 40rpx;
  text-align: center;
  font-size: 28rpx;
  color: #999;
}

.records-list {
  padding: 0 24rpx;
}

.record-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.record-item:last-child {
  border-bottom: none;
}

.record-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.risk-badge {
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
}

.risk-badge.safe {
  background: #e6f7e6;
  color: #4CAF50;
}

.risk-badge.warning {
  background: #fff8e1;
  color: #FF9800;
}

.risk-badge.danger {
  background: #ffebee;
  color: #F44336;
}

.record-time {
  font-size: 24rpx;
  color: #999;
}

.record-body {
  margin-top: 12rpx;
  display: flex;
  justify-content: space-between;
}

.result-text {
  font-size: 28rpx;
  color: #333;
}

.confidence-text {
  font-size: 24rpx;
  color: #666;
}

/* 加载更多 */
.loading-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 32rpx;
  gap: 12rpx;
  font-size: 26rpx;
  color: #999;
}

.load-more-btn {
  text-align: center;
  padding: 24rpx;
  font-size: 28rpx;
  color: #1890FF;
}

.no-more {
  text-align: center;
  padding: 24rpx;
  font-size: 26rpx;
  color: #ccc;
}
